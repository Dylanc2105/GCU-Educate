<style>
    /* Static Group Card */
    .group-card {
        max-width: 300px;
        min-height: 150px;
        margin: auto;
        border-radius: 10px;
    }

    /* Ticket Cards */
    .ticket-card {
        min-width: 280px;
        min-height: 250px;
        margin-right: 10px;
        border-radius: 10px;
        flex-shrink: 0; /* Prevents shrinking */
    }

    /* Horizontal Scrolling Container */
    .ticket-container {
        display: flex;
        overflow-x: hidden; /* Hide scrollbar */
        scroll-behavior: smooth;
        padding: 10px;
        position: relative;
        white-space: nowrap; /* Keeps cards in one line */
    }

    /* Navigation Buttons */
    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        z-index: 10;
        font-size: 20px;
        border-radius: 50%;
    }

    .prev-btn {
        left: 0;
    }

    .next-btn {
        right: 0;
    }

    .carousel-wrapper {
        position: relative;
    }
    .create-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
        font-weight: bold;
        text-decoration: none;
        border: none;
        background-color: #7F3D98;
        color: white;
        transition: all 0.3s ease-in-out;
    }

        .create-btn:hover {
            background-color: #985BAF;
            transform: scale(1.1);
        }

    .d-flex {
        gap: 20px; /* Adds spacing between the search box and create button */
    }

    .btn-archive {
        background-color: #7F3D98;
        color: white;
        border: none;
        padding: 8px 15px;
    }

        .btn-archive:hover {
            background-color: #985BAF;
            color: white;
        }

</style>
