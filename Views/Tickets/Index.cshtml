@{
    ViewBag.Title = "Issue Dashboard";
}

<style>
    /* Static Group Card */
    .group-card {
        max-width: 300px;
        min-height: 150px;
        margin: auto;
        border-radius: 10px;
    }

    /* Issue Cards */
    .issue-card {
        min-width: 280px;
        min-height: 250px;
        margin-right: 10px;
        border-radius: 10px;
        flex-shrink: 0; /* Prevents shrinking */
    }

    /* Horizontal Scrolling Container */
    .issue-container {
        display: flex;
        overflow-x: hidden; /* Hide scrollbar */
        scroll-behavior: smooth;
        padding: 10px;
        position: relative;
        white-space: nowrap; /* Keeps cards in one line */
    }

    /* Navigation Buttons */
    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
        z-index: 10;
        font-size: 20px;
        border-radius: 50%;
    }

    .prev-btn {
        left: 0;
    }

    .next-btn {
        right: 0;
    }

    .carousel-wrapper {
        position: relative;
    }

    .create-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 24px;
        font-weight: bold;
        text-decoration: none;
        border: none;
        background-color: #7F3D98;
        color: white;
        transition: all 0.3s ease-in-out;
    }

        .create-btn:hover {
            background-color: #985BAF;
            transform: scale(1.1);
        }

    .d-flex {
        gap: 20px; /* Adds spacing between the search box and create button */
    }

    .btn-archive {
        background-color: #7F3D98;
        color: white;
        border: none;
        padding: 8px 15px;
    }

        .btn-archive:hover {
            background-color: #985BAF;
            color: white;
        }
</style>
<body>

    <h1 class="dashboard-title">Issue Dashboard</h1>

    <p class="welcome-text">Welcome to the Issue Dashboard! Here you can monitor your active issues and view the Archive.</p>
    <div class="d-flex justify-content-end align-items-center mb-3">
        @using (Html.BeginForm("Index", "Issues", FormMethod.Get, new { @class = "d-flex" }))
        {
            <div class="input-group" style="max-width: 350px;">
                @Html.TextBox("searchString", null, new { @class = "form-control", placeholder = "Search..." })
                <button type="submit" class="btn custom-search">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        }
        <a href="@Url.Action("CreateIssue", "Issues")" class="btn btn-success create-btn">
            +
        </a>
    </div>
    <!----Once database is sorted and we do the backend will do a for loop to get all the classes and issues-->
    <div class="container mt-4">
        <div class="row">
            <!-- Static Group Info Card -->
            <div class="col-md-3">
                <div class="card p-3 shadow text-center">
                    <h4 class="card-title">CRHNDCOMSD252A</h4>
                    <h5 class="card-subtitle">HND Software Development</h5>
                    <p class="card-text">Active Issues: <strong>6</strong></p>
                </div>
            </div>

            <!-- Scrollable Issue Cards -->
            <div class="col-md-9">
                <div class="carousel-wrapper">
                    <!-- Horizontal Scrolling Issue Row -->
                    <div class="issue-container" id="issueRow1">
                        <!-- Issue Cards -->
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="card p-3 shadow issue-card">
                                <h5 class="card-title">Attendance Issues</h5>
                                <p class="card-text">Date</p>
                                <p class="card-text">Student Name</p>
                                <p class="card-text">Lecturer Name</p>
                                <p class="card-text">Issue Description</p>
                                <p class="card-text">New</p>
                            </div>
                        }
                    </div>

                    <!-- Navigation Buttons -->
                    <button class="carousel-btn prev-btn" id="prevBtn1">&lt;</button>
                    <button class="carousel-btn next-btn" id="nextBtn1">&gt;</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <!-- Static Group Info Card -->
            <div class="col-md-3">
                <div class="card p-3 shadow text-center">
                    <h4 class="card-title">CRHNDCOMCS2A</h4>
                    <h5 class="card-subtitle">HND Computer Science</h5>
                    <p class="card-text">Active Issues: <strong>5</strong></p>
                </div>
            </div>

            <!-- Scrollable Issue Cards -->
            <div class="col-md-9">
                <div class="carousel-wrapper">
                    <!-- Horizontal Scrolling Issue Row -->
                    <div class="issue-container" id="issueRow2">
                        <!-- Issue Cards -->
                        @for (int i = 1; i <= 5; i++)
                        {
                            <div class="card p-3 shadow issue-card">
                                <h5 class="card-title">Attendance Issues</h5>
                                <p class="card-text">Date</p>
                                <p class="card-text">Student Name</p>
                                <p class="card-text">Lecturer Name</p>
                                <p class="card-text">Issue Description</p>
                                <p class="card-text">New</p>
                            </div>
                        }
                    </div>

                    <!-- Navigation Buttons -->
                    <button class="carousel-btn prev-btn" id="prevBtn2">&lt;</button>
                    <button class="carousel-btn next-btn" id="nextBtn2">&gt;</button>
                </div>
            </div>
        </div>
    </div>
    <div>
        <button class="btn btn-archive class-btn">Archive</button>
    </div>
</body>
