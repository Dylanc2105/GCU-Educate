@model List<GuidanceTracker.Models.Ticket>

@{
    ViewBag.Title = "Guidance Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        /* General Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        /* Dashboard Layout */
        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 20px;
        }

        /* Issue Container */
        .issue-card {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 33%; /* ✅ Takes up only 1/3 of the page */
            min-width: 300px;
            margin-bottom: 15px;
            position: relative; /* ✅ Needed for floating button */
        }

        /* Section Titles */
        .section-title {
            font-size: 20px;
            font-weight: bold;
            color: #7F3D98;
            margin-bottom: 10px;
            text-align: left;
        }

        /* Issue List */
        .issue-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .issue-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 12px;
            background-color: #FAFAFA;
            margin-bottom: 8px;
            border-radius: 5px;
            transition: background 0.3s ease;
            cursor: pointer;
        }

            .issue-item:hover {
                background: #EEE;
            }

        .issue-info {
            display: flex;
            flex-direction: column;
        }

        .issue-title {
            font-weight: bold;
            color: #7F3D98;
        }

        .issue-data {
            font-size: 14px;
            color: #333;
        }

        /* Total Issues */
        .total-issues {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
            text-align: left;
        }

        .no-issues {
            color: #888;
            font-size: 14px;
        }

        /* Floating Add Button */
        .add-issue-btn {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: #7F3D98;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            text-decoration: none;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            transition: background 0.3s ease;
        }

            .add-issue-btn:hover {
                background: #985BAF;
            }
    </style>
</head>

<body>
    <div class="dashboard-container">
        <h1 class="dashboard-title">Guidance Teacher Dashboard</h1>


        <!-- Issues Section -->
        <div class="issue-card">
            <h2 class="section-title">Recent Issues</h2>

            <ul class="issue-list">
                @if (Model.Any())
                {
                    foreach (var issue in Model.OrderByDescending(i => i.CreatedAt).Take(4))
                    {
                        <li class="issue-item" onclick="window.location.href='@Url.Action("ViewIssue", "Issue", new { id = issue.TicketId })'">
                            <div class="issue-info">
                                <span class="issue-title">@issue.TicketTitle | @issue.Student.FirstName @issue.Student.LastName</span>
                                <span class="issue-data">@issue.Lecturer.FirstName @issue.Lecturer.LastName</span>
                                <span class="issue-data">@issue.CreatedAt.ToString("dd/MM/yyyy")</span>
                            </div>
                        </li>
                    }
            <p class="total-issues">Total Issues: @Model.Count()</p>
                }
                else
                {
                    <p class="no-issues">No active issues.</p>
                }
            </ul>

            <!-- ✅ Floating Add Button for New Issue -->
            <a href="@Url.Action("CreateIssue", "Issue")" class="add-issue-btn">+</a>
        </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}
