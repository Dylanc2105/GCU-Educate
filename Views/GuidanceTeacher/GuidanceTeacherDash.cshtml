        /* Smaller Cards Inside */
        .dashboard-item {
            flex: 1;
            min-width: 250px;
            margin: 10px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            padding: 20px;
        }

        /* Flex Container to Auto-fit Cards */
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 15px;
        }
        /* Main ticket card styling */
        .ticket-card {
            background: #fff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin: 20px;
            padding: 20px;
            width: 300px;
            font-family: Arial, sans-serif;
        }

        /* Header of the card with tinted background */
        .ticket-card-header {
            background-color: #7F3D98;
            color: white;
            padding: 10px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align: center;
            border-bottom: 2px solid #7F3D98;
        }

            .ticket-card-header a {
                text-decoration: none;
                color: #fff;
            }

                .ticket-card-header a:hover {
                    color: #985BAF;
                }

        /* Links (New, In Progress, Create) */
        .ticket-links {
            margin: 15px 0;
            text-align: center;
        }

        .ticket-link {
            color: #7F3D98;
            text-decoration: none;
            padding: 5px;
        }


        /* Ticket list styling */
        .ticket-list {
            margin-top: 10px;
        }

        .ticket-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
            background-color: #f9f9f9;
            margin-bottom: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
            box-sizing: border-box;
        }

            .ticket-item a {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%;
                text-decoration: none;
                color: inherit;
                padding: 10px 15px;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .ticket-item:hover {
                background-color: #e6e6e6;
            }

        #ticket-items {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        /* Ticket info styling */
        .ticket-info {
            display: flex;
            flex-direction: column;
        }

        .ticket-date {
            font-weight: bold;
            color: #7F3D98;
        }

        .ticket-data {
            font-size: 14px;
            color: #333;
        }
    </style>
</head>

<body>
    <h1 class="dashboard-title">Guidance Lecturer Dashboard</h1>

    <p class="welcome-text">Welcome to the guidance tracker! Here you can monitor students progress, manage tasks, and collaborate with your team.</p>
    <div class="container mt-4">
        @*Main Dashboard Card*@
        @*<div class="card dashboard-card">*@

        <!-- Smaller Cards Container -->
        <div class="cards-container">
            <div class="ticket-card">
                <!-- Ticket card header -->
                <div class="ticket-card-header">
                    <a href="@Url.Action("Index", "Tickets")" class="text-white">
                        <h5>Ticket Dashboard</h5>
                    </a>
                </div>

                <!-- Links (New, In Progress, Create) -->
                <div class="ticket-links">
                    <a href="">New</a> |
                    <a href="">In Progress</a> |
                    <a href="@Url.Action("CreateTicket", "Tickets")" >Create</a>

                </div>

                <!-- Ticket List (this will be dynamically populated) -->
                <div class="ticket-list">
                    <ul id="ticket-items">
                        <!-- Example ticket -->
                        <li class="ticket-item">
                            <a href="@Url.Action("Details", "Ticket", new { })" class="ticket-link">
                                <div class="ticket-info">
                                    <span class="ticket-date">[Date] | Lecturer Name</span>
                                    <span class="ticket-data">Student Name</span>
                                    <span class="ticket-data">Issue</span>
                                </div>
                            </a>
                        </li>
                        <li class="ticket-item">
