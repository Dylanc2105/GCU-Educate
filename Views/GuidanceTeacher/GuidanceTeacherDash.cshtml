@model List<GuidanceTracker.Models.Issue>

@{
    ViewBag.Title = "Guidance Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        .dashboard-container {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            padding: 20px;
            gap: 20px;
        }

        .issue-card {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 33%;
            min-width: 300px;
            position: relative;
        }

        .section-title {
            font-size: 20px;
            font-weight: bold;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        .issue-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .issue-item {
            display: flex;
            flex-direction: column;
            gap: 2px;
            background-color: #FAFAFA;
            margin-bottom: 10px;
            padding: 5px;
            border-left: 4px solid #7F3D98;
            border-radius: 5px;
            cursor: pointer;
        }

            .issue-item:hover {
                background-color: #f0f0f0;
            }

        .issue-title {
            font-weight: bold;
            color: #7F3D98;
        }

        .issue-sub {
            font-size: 12px;
            color: #444;
        }

        .total-issues {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
        }

        .no-issues {
            color: #888;
            font-size: 14px;
        }

        .add-issue-btn {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background: #7F3D98;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            text-decoration: none;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            transition: background 0.3s ease;
        }

            .add-issue-btn:hover {
                background: #985BAF;
            }
    </style>
</head>

<body>
    <div class="dashboard-container">
        <!-- Issues Section (Left 1/3) -->
        <div class="issue-card">
            <h2 class="section-title">Recent Issues</h2>

            <ul class="issue-list">
                @if (Model.Any())
                {
                    foreach (var issue in Model.OrderByDescending(i => i.CreatedAt).Take(4))
                    {
                        <li class="issue-item" onclick="window.location.href='@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })'">
                            <span class="issue-title">@issue.IssueTitle</span>
                            <span class="issue-sub">@issue.Student.FirstName @issue.Student.LastName</span>
                            <span class="issue-sub">@issue.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </li>
                    }
                    <p class="total-issues">Total Issues: @Model.Count()</p>
                }
                else
                {
                    <p class="no-issues">No active issues.</p>
                }
            </ul>

            <a href="@Url.Action("CreateIssue", "Issue")" class="add-issue-btn">+</a>
        </div>

        <!-- Reserved Space for Additional Panels -->
        <div style="flex: 1;"></div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}