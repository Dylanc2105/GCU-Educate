@model GuidanceTracker.Models.ViewModels.GuidanceDashViewModel

@{
    ViewBag.Title = "Guidance Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}

<head>
    <style>
        .stat-icon-img {
            width: 70px;
            height: 70px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        .stat-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #7F3D98;
            margin-bottom: 5px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 400;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        
        .custom-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .welcome-card {
            background-color: white;
            border-radius: 10px;
            padding: 0;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            display: flex;
            flex-direction: row;
            align-items: stretch;
            min-height: 130px;
        }

            .welcome-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #7F3D98;
                margin-bottom: 5px;
            }

            .welcome-card p {
                font-size: 1rem;
                color: #555;
                margin-bottom: 4px;
            }

        .online-badge {
            display: flex;
            align-items: center;
            gap: 6px;
            background-color: rgba(0, 128, 0, 0.1);
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.85rem;
        }

        .dot {
            height: 10px;
            width: 10px;
            background-color: green;
            border-radius: 50%;
        }

        .online-text {
            color: green;
            font-weight: 600;
        }

        /* Status badge additions */
.online-badge.offline {
    background-color: rgba(128, 128, 128, 0.15);
}

.dot.offline {
    background-color: gray;
}

.online-text.offline {
    color: gray;
}

        .welcome-img-col {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f5f5fa;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
            padding: 0 16px;
            min-width: 120px;
            max-width: 140px;
        }
        .welcome-img-full {
            width: 100%;
            height: 100%;
            max-height: 130px;
            object-fit: contain;
            display: block;
        }
        .welcome-content-col {
            flex: 1 1 auto;
            padding: 16px 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

     
    .welcome-img-col {
        border-radius: 10px 10px 0 0;
        max-width: 100%;
        min-width: 0;
        padding: 16px 0;
    }
    .welcome-img-full {
        max-height: 80px;
    }

        .welcome-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row g-4" id="dashboardCardsContainer">

            <!-- Welcome -->
            <div class="col-12" id="welcomeCard">
                <div class="card welcome-card flex-row">
                    
                    <div class="welcome-content-col">
                        <h5 class="card-title d-flex align-items-center gap-3">
                            Hi, @Model.FirstName!
                            <span class="online-badge" id="onlineStatusBadge">
                                <span class="dot" id="onlineDot"></span>
                                <span class="online-text" id="onlineText">Online</span>
                            </span>
                        </h5>
                        <p class="card-text">Welcome to your Guidance Dashboard.</p>
                        <p class="text-muted" id="currentDateTime"></p>
                    </div>
                </div>
            </div>


            <!-- Issues -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("Index", "Issue")" class="card custom-card text-center" style="text-decoration:none;">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/issues.svg" alt="Issues" class="stat-icon-img" />
                        <p class="stat-title">New Issues</p>
                        <p class="stat-number">@Model.NewIssuesCount</p>
                    </div>
                </a>
            </div>

            <!-- Feedback -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("ViewUnreadReceivedSimpleFeedbacks", "DetailedFeedback")" class="card custom-card text-center" style="text-decoration:none;">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/feedback.svg" alt="Feedback" class="stat-icon-img" />
                        <p class="stat-title">Recent Feedback</p>
                        <p class="stat-number">@Model.NewFeedbackCount</p>
                    </div>
                </a>
            </div>

            <!-- Appointments Today -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("AppointmentsDash", "GuidanceTeacher")" class="card custom-card text-center" style="text-decoration:none;">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/calendarToday.svg" alt="Appointments" class="stat-icon-img" />
                        <p class="stat-title">Today's Appointments</p>
                        <p class="stat-number">@Model.AppointmentsTodayCount</p>
                    </div>
                </a>
            </div>

            <!-- Guidance Sessions -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("GuidanceSessionsForWeek", "GuidanceSession")" class="card custom-card text-center" style="text-decoration:none;">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/calendarWeek.svg" alt="Guidance Sessions" class="stat-icon-img" />
                        <p class="stat-title">Weekly Sessions</p>
                        <p class="stat-number">@Model.GuidanceSessionsForWeekCount</p>
                    </div>
                </a>
            </div>

            <!-- Messages -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("Index", "Message")" class="card custom-card text-center" style="text-decoration:none;">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/messages.svg" alt="Messages" class="stat-icon-img" />
                        <p class="stat-title">Unread Messages</p>
                        <p class="stat-number">@Model.UnreadMessagesCount</p>
                    </div>
                </a>
            </div>

            <!-- Posts -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("ViewPosts", "Post")" class="card custom-card text-center" style="text-decoration:none;">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/posts.svg" alt="Posts" class="stat-icon-img" />
                        <p class="stat-title">Latest Posts</p>
                        <p class="stat-number">@Model.NewAnnouncementsCount</p>
                    </div>
                </a>
            </div>


        </div>
    </div>

    <script>
        function updateClock() {
            const now = new Date();
            const formatted = now.toLocaleString('en-GB', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('currentDateTime').innerText = formatted;
        }

        updateClock();
        setInterval(updateClock, 1000);

        document.addEventListener('DOMContentLoaded', function () {
            const hideWelcome = localStorage.getItem('hideWelcomeMessage') === 'true';
            const welcomeCard = document.getElementById('welcomeCard');
            if (hideWelcome && welcomeCard) welcomeCard.remove();
        });
    </script>
</body>
