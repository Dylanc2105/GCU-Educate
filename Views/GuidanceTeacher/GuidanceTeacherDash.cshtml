@{
    ViewBag.Title = "Guidance Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>
<head>
    <style>
        /* Smaller Cards Inside */
        .dashboard-item {
            flex: 1;
            min-width: 250px;
            margin: 10px;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            padding: 20px;
        }

        /* Flex Container to Auto-fit Cards */
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 15px;
        }

        /* Main issue card styling */
        .issue-card {
            background: #fff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin: 20px;
            padding: 20px;
            width: 300px;
            font-family: Arial, sans-serif;
        }

        /* Header of the card with tinted background */
        .issue-card-header {
            background-color: #7F3D98;
            color: white;
            padding: 10px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align: center;
            border-bottom: 2px solid #7F3D98;
        }

            .issue-card-header a {
                text-decoration: none;
                color: #fff;
            }

                .issue-card-header a:hover {
                    color: #985BAF;
                }

        /* Links (New, In Progress, Create) */
        .issue-links {
            margin: 15px 0;
            text-align: center;
        }

        .issue-link {
            color: #7F3D98;
            text-decoration: none;
            padding: 5px;
        }

        /* Issue list styling */
        .issue-list {
            margin-top: 10px;
        }

        .issue-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
            background-color: #f9f9f9;
            margin-bottom: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
            box-sizing: border-box;
        }

            .issue-item a {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%;
                text-decoration: none;
                color: inherit;
                padding: 10px 15px;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .issue-item:hover {
                background-color: #e6e6e6;
            }

        #issue-items {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        /* Issue info styling */
        .issue-info {
            display: flex;
            flex-direction: column;
        }

        .issue-title {
            font-weight: bold;
            color: #7F3D98;
        }

        .issue-data {
            font-size: 14px;
            color: #333;
        }
    </style>
</head>

<body>
    <h1 class="dashboard-title">Guidance Lecturer Dashboard</h1>

    <p class="welcome-text">Welcome to the guidance tracker! Here you can monitor students' progress, manage tasks, and collaborate with your team.</p>
    <div class="container mt-4">

        <!-- Smaller Cards Container -->
        <div class="cards-container">
            <div class="issue-card">
                <!-- Issue card header -->
                <div class="issue-card-header">
                    <a href="@Url.Action("Index", "Issues")" class="text-white">
                        <h5>Issue Dashboard</h5>
                    </a>
                </div>

                <!-- Links (New, In Progress, Create) -->
                <div class="issue-links">
                    <a href="">New</a> |
                    <a href="">In Progress</a> |
                    <a href="@Url.Action("CreateIssue", "Issues")">Create</a>
                </div>

                <!-- Issue List (this will be dynamically populated) -->
                <div class="issue-list">
                    <ul id="issue-items">
                        <!-- Example issue -->
                        <li class="issue-item">
                            <a href="@Url.Action("Details", "Issue", new { })" class="issue-link">
                                <div class="issue-info">
                                    <span class="issue-title">Issue | Student Name</span>
                                    <span class="issue-data">Lecturer Name</span>
                                    <span class="issue-data">Date</span>
                                </div>
                            </a>
                        </li>
                        <li class="issue-item">
                            <a href="@Url.Action("Details", "Issue", new { })" class="issue-link">
                                <div class="issue-info">
                                    <span class="issue-title">Issue | Student Name</span>
                                    <span class="issue-data">Lecturer Name</span>
                                    <span class="issue-data">Date</span>
                                </div>
                            </a>
                        </li>
                        <li class="issue-item">
                            <a href="@Url.Action("Details", "Issue", new { })" class="issue-link">
                                <div class="issue-info">
                                    <span class="issue-title">Issue | Student Name</span>
                                    <span class="issue-data">Lecturer Name</span>
                                    <span class="issue-data">Date</span>
                                </div>
                            </a>
                        </li>
                        <li class="issue-item">
                            <a href="@Url.Action("Details", "Issue", new { })" class="issue-link">
                                <div class="issue-info">
                                    <span class="issue-title">Issue | Student Name</span>
                                    <span class="issue-data">Lecturer Name</span>
                                    <span class="issue-data">Date</span>
                                </div>
                            </a>
                        </li>
                        <!-- More issues will go here -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}
