@model GuidanceTracker.Models.ViewModels.GuidanceDashViewModel

@{
    ViewBag.Title = "Guidance Teacher Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        alert("@ViewBag.Message");
    </script>
}

<head>
    <style>
        .stat-icon-img {
            width: 70px;
            height: 70px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        .stat-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #7F3D98;
            margin-bottom: 5px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 400;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        .view-more-link {
            font-size: 1rem;
            color: #7F3D98;
            text-decoration: underline;
        }

        .custom-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .welcome-card {
            background-color: white;
            border-radius: 10px;
            padding: 16px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .welcome-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #7F3D98;
                margin-bottom: 5px;
            }

            .welcome-card p {
                font-size: 1rem;
                color: #555;
                margin-bottom: 4px;
            }
    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row g-4" id="dashboardCardsContainer">

            <!-- Welcome -->
            <div class="col-12" id="welcomeCard">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h5 class="card-title">Hi, @Model.FirstName!</h5>
                        <p class="card-text">Welcome to your Guidance Dashboard.</p>
                        <p class="text-muted" id="currentDateTime"></p>
                    </div>
                </div>
            </div>

            <!-- New Issues -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/issues.svg" alt="New Issues Icon" class="stat-icon-img" />
                        <p class="stat-title">New Issues</p>
                        <p class="stat-number">@Model.NewIssuesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Issue", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Feedback -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/feedback.svg" alt="Feedback Icon" class="stat-icon-img" />
                        <p class="stat-title">New Feedback</p>
                        <p class="stat-number">@Model.NewFeedbackCount</p>
                        <p>@Html.ActionLink("View more >", "ViewUnreadReceivedSimpleFeedbacks", "DetailedFeedback", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- Appointments Today -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/calendarToday.svg" alt="Appointments Icon" class="stat-icon-img" />
                        <p class="stat-title">Appointments Today</p>
                        <p class="stat-number">@Model.AppointmentsTodayCount</p>
                        <p>@Html.ActionLink("View more >", "AppointmentsDash", "GuidanceTeacher", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- Guidance Sessions -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/calendarWeek.svg" alt="Guidance Sessions Icon" class="stat-icon-img" />
                        <p class="stat-title">Guidance Sessions For Week</p>
                        <p class="stat-number">@Model.GuidanceSessionsForWeekCount</p>
                        <p>@Html.ActionLink("View more >", "GuidanceSessionsForWeek", "GuidanceSession", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/messages.svg" alt="Messages Icon" class="stat-icon-img" />
                        <p class="stat-title">New Messages</p>
                        <p class="stat-number">@Model.UnreadMessagesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Message", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- Posts -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/posts.svg" alt="Posts Icon" class="stat-icon-img" />
                        <p class="stat-title">New Posts</p>
                        <p class="stat-number">@Model.NewAnnouncementsCount</p>
                        <p>@Html.ActionLink("View more >", "ViewPosts", "Post", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        function updateClock() {
            const now = new Date();
            const formatted = now.toLocaleString('en-GB', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('currentDateTime').innerText = formatted;
        }

        updateClock();
        setInterval(updateClock, 1000);

        document.addEventListener('DOMContentLoaded', function () {
            const hideWelcome = localStorage.getItem('hideWelcomeMessage') === 'true';
            const welcomeCard = document.getElementById('welcomeCard');
            if (hideWelcome && welcomeCard) welcomeCard.remove();
        });
    </script>
</body>
