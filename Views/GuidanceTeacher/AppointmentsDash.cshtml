@model GuidanceTracker.Models.ViewModels.AppointmentsDashViewModel


<div class="container-fluid dashboard">
    <div class="row">
        <!-- Left side with calendar -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title">Calendar</h5>
                </div>
                <div class="card-body">
                    @Html.Action("CalendarForDashPartial", "GuidanceTeacher")
                </div>
            </div>
        </div>

        <!-- Right side with appointments and quick actions -->
        <div class="col-md-6">
            <!-- Today's Appointments Card -->
            <div class="card mb-4">
                <div class="card-header">
                    @if (Model.AppointmentsTodayCount != 1)
                    {
                    <h5 class="card-title">You have @Model.AppointmentsTodayCount appointments today</h5>
                    }
                    else
                    {
                        <h5 class="card-title">You have 1 appointment today</h5>
                    }
                </div>
                <div class="card-body appointments-container">
                    @Html.Action("GetAppointmentsForDatePartial", DateTime.Now)
                </div>
            </div>

            <!-- Quick Action Cards -->
            <div class="row">
                <div class="col-md-4">
                    <a href="@Url.Action("AppointmentsToBeApproved", "Appointment")" class="card quick-action-card text-dark text-decoration-none">
                        <div class="card-body text-center">
                            <i class="fa fa-check" style="font-size:24px"></i>
                            @if (Model.AppointmentsToBeApprovedCount == 1)
                            {
                            <h6 class="card-title">1 appointment to be approved</h6>
                            }
                            else
                            {
                            <h6 class="card-title">@Model.AppointmentsToBeApprovedCount appointments to be approved</h6>
                            }
                        </div>
                    </a>
                </div>



                <!-- Quick Action 2 -->
                <div class="col-md-4">
                    <a href="@Url.Action("AppointmentsForWeek", "GuidanceTeacher")" class="text-dark text-decoration-none">
                        <div class="card quick-action-card">
                            <div class="card-body text-center">
                                <i class="fa fa-tasks" style="font-size:24px"></i>
                                <h6 class="card-title">@Model.AppointmentsForWeekCount appointments for week</h6>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Quick Action 3 -->
                

                <div class="col-md-4">
                    <a href="@Url.Action("SelectStudentForAppointment", "Appointment")" class="text-dark text-decoration-none">
                        <div class="card quick-action-card">
                            <div class="card-body text-center">
                                <i class="fa fa-graduation-cap" style="font-size:24px"></i>
                                <h6 class="card-title">Initiate a meeting</h6>
                            </div>
                        </div>
                        </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        border: none;
    }

    .dashboard .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eaecef;
    }

    .appointments-container {
        max-height: 350px;
        overflow-y: auto;
        padding: 0;
    }

    .quick-action-card {
        height: 150px;
        transition: transform 0.2s;
        cursor: pointer;
    }

        .quick-action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }
</style>
