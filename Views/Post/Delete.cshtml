@model GuidanceTracker.Models.Post
@{
    ViewBag.Title = "Delete Post";
}

<style>
    :root {
        --primary-color: #7F3D98;
        --primary-hover: #6a24a6;
        --light-bg: #f8f9fa;
        --border-color: #e0e0e0;
        --text-dark: #333;
        --text-medium: #666;
        --text-light: #888;
    }

    .delete-container {
        padding: 20px;
    }

    .delete-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        padding: 20px;
        margin-bottom: 30px;
    }

    .delete-title {
        color: var(--primary-color);
        font-size: 28px;
        margin-bottom: 10px;
    }

    .delete-subtitle {
        color: #dc3545;
        font-size: 20px;
        margin-bottom: 20px;
    }

    .post-section-title {
        color: var(--text-dark);
        font-size: 18px;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--border-color);
    }

    .post-details {
        margin-bottom: 30px;
    }

    .detail-label {
        font-weight: 600;
        color: var(--text-medium);
        margin-bottom: 5px;
    }

    .detail-value {
        color: var(--text-dark);
        margin-bottom: 15px;
    }

    .post-content-box {
        padding: 15px;
        background-color: var(--light-bg);
        border-radius: 4px;
        margin-bottom: 15px;
        border-left: 4px solid var(--primary-color);
    }

    .action-button-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

        .action-button-delete:hover {
            background-color: #c82333;
        }

    .action-button-cancel {
        background-color: #6c757d;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 4px;
        margin-left: 10px;
        transition: background-color 0.2s;
    }

        .action-button-cancel:hover {
            background-color: #5a6268;
            color: white;
            text-decoration: none;
        }

    .warning-text {
        color: #dc3545;
        font-style: italic;
        margin-bottom: 20px;
    }
</style>

<div class="delete-container">
    <h1 class="delete-title">Delete Post</h1>
    <h3 class="delete-subtitle">Are you sure you want to delete this post?</h3>

    <div class="delete-card">
        <h4 class="post-section-title">Post Details</h4>

        <div class="post-details">
            <div class="row">
                <div class="col-md-3">
                    <div class="detail-label">Title</div>
                </div>
                <div class="col-md-9">
                    <div class="detail-value">@Model.Title</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="detail-label">Content</div>
                </div>
                <div class="col-md-9">
                    <div class="post-content-box">@Model.Content</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="detail-label">Posted By</div>
                </div>
                <div class="col-md-9">
                    <div class="detail-value">@Model.Author.FirstName @Model.Author.LastName</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="detail-label">Date Posted</div>
                </div>
                <div class="col-md-9">
                    <div class="detail-value">@Model.PostDate.ToString("MMMM dd, yyyy - h:mm tt")</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="detail-label">Visibility</div>
                </div>
                <div class="col-md-9">
                    <div class="detail-value">@Model.Visibility</div>
                </div>
            </div>
        </div>

        <p class="warning-text">This action cannot be undone. All post data will be permanently deleted.</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions">
                <button type="submit" class="action-button-delete">Delete Post</button>
                <a href="@Url.Action("ViewMyPosts", "Post")" class="action-button-cancel">Cancel</a>
            </div>
        }
    </div>
</div>