﻿@{
    ViewData["Title"] = "Password Reset Confirmation";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ADAEB3;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background: white;
            padding: 30px;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 350px;
        }

        .btn {
            background-color: #7E3F96;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }

            .btn:hover {
                background-color: #682d7a;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <img src="~/images/Icons/Logo-Purple.png" alt="Logo" style="max-width: 200px; margin-bottom: 20px; display: block; margin-left: auto; margin-right: auto;">
            <h2>Password Reset Successful</h2>
            <p>Congrats <strong>@ViewBag.Email</strong> your password has now been successfully reset.</p>
            <a class="btn" href="@Url.Action("Login", "Account")">Login</a>
        </div>
    </div>
</body>
</html>
