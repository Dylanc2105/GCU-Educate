@{
    ViewData["Title"] = "Enter Reset Code";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ADAEB3;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background: white;
            padding: 30px;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn {
            background-color: #7E3F96;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #682d7a;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <img src="~/images/GTLogo.png" alt="Logo" style="max-width: 200px; margin-bottom: 20px;">
            <h2>Enter Reset Code</h2>
            <p>Please enter the code sent to your email.</p>

            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color: red;">@ViewBag.ErrorMessage</p>
            }

            <form asp-action="VerifyCode" asp-controller="CodeVerification" method="post">
                <input type="text" name="resetCode" class="form-control" placeholder="Enter reset code" required>
                <button type="submit" class="btn">Verify Code</button>
            </form>

            <p><a href="#">Resend Code</a></p>
        </div>
    </div>
</body>
</html>
