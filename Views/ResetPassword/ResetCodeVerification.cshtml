@{
    ViewData["Title"] = "Enter Reset Code";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #ADAEB3;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background: white;
            padding: 30px;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin: 0 auto 10px auto;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn {
            background-color: #7E3F96;
            color: white;
            padding: 10px;
            width: 100%;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #682d7a;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <img src="~/images/Icons/Logo-Purple.png" alt="Logo" style="max-width: 200px; margin-bottom: 20px; display: block; margin-left: auto; margin-right: auto;">
            <h2>Enter Reset Code</h2>

            @*display the email*@
            @if (ViewBag.UserEmail != null)
            {
                <p>Reset code sent to: <strong>@ViewBag.UserEmail</strong></p>
            }
            <p>Please enter your email and the code sent to you.</p>

            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color: red;">@ViewBag.ErrorMessage</p>
            }

            @using (Html.BeginForm("VerifyCode", "ResetPassword", FormMethod.Post))
            {
                <input type="email" name="userEmail" class="form-control" placeholder="Enter your email" required
                       value="@(ViewBag.UserEmail != null ? ViewBag.UserEmail : "")" />
                <input type="text" name="resetCode" class="form-control" placeholder="Enter reset code" required />
                <button type="submit" class="btn">Verify Code</button>
            }

            <p><a href="#">Resend Code</a></p>
        </div>
    </div>
</body>
</html>
