@model GuidanceTracker.Models.ViewModels.AppointmentViewModel
@{
    ViewBag.Title = "Create Appointment";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Schedule an Appointment</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.StudentId)
                        @Html.HiddenFor(model => model.GuidanceSessionId)
                        @Html.HiddenFor(model => model.AppointmentDate)
                        @Html.HiddenFor(model => model.Room)
                        @Html.HiddenFor(model => model.AppointmentStatus)
                        @Html.HiddenFor(model => model.IssueId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.StudentName, "Student", htmlAttributes: new { @class = "control-label" })
                            <div class="form-control-static">
                                @Model.StudentName
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Appointment Date</label>
                            <div class="form-control-static">
                                @Model.AppointmentDate.ToShortDateString()
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Room</label>
                            <div class="form-control-static">
                                @Model.Room
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Appointment Type</label>
                            <div class="form-control-static">
                                @(Model.IssueId.HasValue ? "Issue-related Appointment" : "Progress Meeting")
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StartTime, "Select Time Slot", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.StartTime,
                                          new SelectList(Model.AvailableTimeSlots.Where(s => s.IsAvailable), "StartTime", "DisplayText"),
                                          "-- Select a time slot --",
                                          new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AppointmentNotes, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.AppointmentNotes, new { @class = "form-control", rows = 4 })
                            @Html.ValidationMessageFor(model => model.AppointmentNotes, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Schedule Appointment" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to Dashboard", "GuidanceTeacherDash", "GuidanceTeacher", null, new { @class = "btn btn-back" })
</p>

<style>
    .btn {
        color: white;
        border: none;
        border-radius: 20px;
        padding: 8px 16px;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-back {
        background: #7F3D98;
    }
</style>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}