@model IEnumerable<GuidanceTracker.Models.Appointment>

@{
    ViewBag.Title = "Appointments To Be Approved";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AppointmentDate)</th>
            <th>Student Name</th>
            <th>Class</th>
            <th>@Html.DisplayNameFor(model => model.AppointmentNotes)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
                <td>@item.Student.FirstName @item.Student.LastName</td>
                <td>@Html.DisplayFor(modelItem => item.Student.Class.ClassName)</td>
                <td>@Html.DisplayFor(modelItem => item.AppointmentNotes)</td>
                <td>
                    @if (item.AppointmentStatus == GuidanceTracker.Models.AppointmentStatus.Requested)
                    {
                        @Html.ActionLink("Approve", "ApproveAppointment", new { id = item.AppointmentId }, new { @class = "btn btn-success btn-action" })
                        <span></span> @Html.ActionLink("Reschedule", "Edit", new { id = item.AppointmentId }, new { @class = "btn btn-warning btn-action" })
                        <span></span> @Html.ActionLink("Cancel", "CancelAppointment", new { id = item.AppointmentId }, new { @class = "btn btn-danger btn-action" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<p>
    @Html.ActionLink("Back to Dashboard", "GuidanceTeacherDash", "GuidanceTeacher", null, new { @class = "btn btn-back" })
</p>

<style>
    .btn {
        color: white;
        border: none;
        border-radius: 20px;
        padding: 8px 16px;
        cursor: pointer;
        font-size: 14px;
    }
    .btn-back {
        background: #7F3D98;
    }
</style>