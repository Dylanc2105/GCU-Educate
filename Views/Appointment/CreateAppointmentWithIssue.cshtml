@model GuidanceTracker.Models.Appointment

@{
    ViewBag.Title = "Create";
}

@*  alert for issues raised in controller *@
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    //student info
<div class="form-horizontal">
    <h4>Create an appointment for @Model.Student.FirstName @Model.Student.LastName about @Model.Issue.IssueTitle</h4>
    <hr />
    <p>@Model.Issue.IssueDescription</p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.StudentId)

    @* date textbox *@
    <p>Date</p>
    <input type="text" id="stringDate" name="stringDate" value="@Model.GuidanceSession.Day.ToString("dd/MM/yyyy")" />

    @*placeholder="dd/mm/year"  placeholder="hh:mm"*@

    @* time textbox *@
    <p>Time</p>
    <input type="text" id="stringTime" name="stringTime" value="@Model.GuidanceSession.Time" />


    @* room textbox *@
    <div class="form-group">
        @Html.LabelFor(model => model.Room, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Room, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Room, "", new { @class = "text-danger" })
        </div>
    </div>

    @* comment text area *@
    <div class="form-group">
        @Html.LabelFor(model => model.AppointmentNotes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.AppointmentNotes, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AppointmentNotes, "", new { @class = "text-danger" })
        </div>
    </div>

    @* status area *@
    <div class="form-group">
        @Html.LabelFor(model => model.AppointmentStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.AppointmentStatus, "Select Status", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AppointmentStatus, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-purple mt-2" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
