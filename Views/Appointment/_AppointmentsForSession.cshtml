@model IEnumerable<GuidanceTracker.Models.Appointment>

<div class="session-card">
    <div class="session-header">
        <div class="session-info">
            <h4><strong>@ViewBag.Class</strong></h4>
            <h4><strong>Time:</strong> @ViewBag.GSTime.ToString("hh\\:mm")</h4>
            <h4><strong>Room:</strong> @ViewBag.Room</h4>
        </div>
    </div>
    <div class="table-card">

        @if (Model.Count() != 0)
        {
            <table class="table">
                <tr>
                    <th>
                        Student Name
                    </th>
                    <th>
                        Meeting Type
                    </th>
                    <th>
                        Start Time
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.FirstName)
                            @Html.DisplayFor(modelItem => item.Student.LastName)
                        </td>
                        <td>
                            @if (item.IssueId == null)
                            {
                                <p>Progress meeting</p>
                            }
                            else
                            {
                                <p>Issue Discussion</p>
                            }
                        </td>
                        <td>
                            @item.StartTime.ToString("hh\\:mm")
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Appointment", new { id = item.AppointmentId }, new { @class = "btn btn-edit small" })
                            @if (item.IssueId == null)
                            {
                                <span></span>@Html.ActionLink("Start Meeting", "ProgressMeetingForm", "Appointment", new { id = item.AppointmentId }, new { @class = "btn" })
                            }
                            else
                            {
                                <span></span>@Html.ActionLink("Start Meeting", "AppointmentForm", "Appointment", new { id = item.AppointmentId }, new { @class = "btn" })
                            }
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p><strong>No appointments assigned for this session</strong></p>
        }
    </div>
</div>

    <style>
        .session-card {
            background-color: white;
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            overflow: hidden;
            max-width: 1200px;
            margin: 20px auto;
        }
        .table-card {
            padding: 20px;
        }

        .session-header {
            background-color: #7F3D98;
            color: white;
            padding: 15px 20px;
            border-bottom: 1px solid #e0e0e0;
        }
        .session-info {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            align-items: center;
        }

        .btn {
            color: white;
            border: none;
            border-radius: 20px;
            padding: 8px 16px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease; 
        }

            .btn:hover {
                background-color: #985BAF;
                color: white;
            }
    </style>
