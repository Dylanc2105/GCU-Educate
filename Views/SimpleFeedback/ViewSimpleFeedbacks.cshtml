@model IEnumerable<GuidanceTracker.Models.SimpleFeedback>
@{
    ViewBag.Title = "My Feedback";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-bullhorn"></i> My Feedback</h2>
            <p class="text-muted">View and manage all your submitted feedback</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("CreateSimpleFeedback", "SimpleFeedback")" class="btn" style="background-color: #7F3D98; color: white;">
                <i class="fas fa-plus"></i> New Feedback
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert" style="background-color: #e0c6ff; color: #4b0082; border-color: #7F3D98;">
            <i class="fas fa-info-circle"></i> You haven't submitted any feedback yet.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header" style="background-color: #7F3D98; color: white;">
                <h4>Submitted Feedback</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead style="background-color: #f2e9ff;">
                            <tr>
                                <th>Title</th>
                                <th>Recipient</th>
                                <th>Unit</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(f => f.DateOfCreation))
                            {
                                <tr>
                                    <td>
                                        <strong>@item.FeedbackTitle</strong>
                                    </td>
                                    <td>
                                        @if (item.GuidanceTeacherId != null)
                                        {
                                            <div>Guidance Teacher</div>
                                        }
                                        @if (item.CurriculumHeadId != null)
                                        {
                                            <div>Curriculum Head</div>
                                        }
                                    </td>
                                    <td>
                                        @(item.Unit?.UnitName ?? "N/A")
                                    </td>
                                    <td>
                                        @item.DateOfCreation.ToString("MMM d, yyyy")
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ViewSimpleFeedbackDetails", "SimpleFeedback", new { id = item.FeedbackId })"
                                           class="btn btn-sm" style="background-color: #7b2cbf; color: white;">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        @*<a href="@Url.Action("DeleteSimpleFeedback", "SimpleFeedback", new { id = item.FeedbackId })"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this feedback?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

<div class="mt-4">
    <a href="javascript:history.back()" class="btn" style="background-color: #f2e9ff; color: #7F3D98; border-color: #7F3D98; ">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>
</div>
