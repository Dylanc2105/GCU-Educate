@model GuidanceTracker.Models.ViewModels.StudentDashViewModel
@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center mt-2 mb-3">
        @TempData["Success"]
    </div>
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        .stat-icon-img {
            width: 70px;
            height: 70px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        .stat-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #7F3D98;
            margin-bottom: 5px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        .view-more-link {
            font-size: 1rem;
            color: #7F3D98;
            text-decoration: underline;
        }

        .custom-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .welcome-card {
            background-color: #f4f4f4;
            border-radius: 10px;
            padding: 16px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .welcome-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #7F3D98;
                margin-bottom: 5px;
            }

            .welcome-card p {
                font-size: 1rem;
                color: #555;
                margin-bottom: 4px;
            }
    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row g-4">

            <!-- Welcome Card -->
            <div class="col-12" id="welcomeCard">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h5 class="card-title">Hi, @Model.FirstName!</h5>
                        <p class="card-text">Welcome to your Student Dashboard.</p>
                        <p class="text-muted" id="currentDateTime"></p>
                    </div>
                </div>
            </div>

            <!-- Upcoming Appointments -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/calendar.png" class="stat-icon-img" alt="Appointments" />
                        <p class="stat-title">Upcoming Appointments</p>
                        <p class="stat-number">@Model.UpcomingAppointmentsCount</p>
                        <p>@Html.ActionLink("View more >", "UpcomingAppoinments", "Student", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- Request Appointment -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/RequestAppointment.png" class="stat-icon-img" alt="Request Appointment" />
                        <p class="stat-title">Request Appointment</p>
                        <p>@Html.ActionLink("View more >", "RequestAppointment", "Student", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Messages -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/messages.png" class="stat-icon-img" alt="Messages" />
                        <p class="stat-title">New Messages</p>
                        <p class="stat-number">@Model.NewMessagesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Message", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Posts -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/posts.png" class="stat-icon-img" alt="Posts" />
                        <p class="stat-title">New Posts</p>
                        <p class="stat-number">@Model.NewAnnouncementsCount</p>
                        <p>@Html.ActionLink("View more >", "ViewPosts", "Post", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- Leave Feedback -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/feedback.png" class="stat-icon-img" alt="Leave Feedback" />
                        <p class="stat-title">Leave Feedback</p>
                        <p>@Html.ActionLink("To the form >", "StudentFeedbackDashboard", "SimpleFeedback", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            function updateClock() {
                const now = new Date();
                const formatted = now.toLocaleString('en-GB', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
                document.getElementById('currentDateTime').innerText = formatted;
            }

            updateClock();
            setInterval(updateClock, 1000);

            $(document).ready(function () {
                setTimeout(function () {
                    $(".alert-success").fadeOut("slow");
                }, 3000);
            });
        </script>
    }
</body>
