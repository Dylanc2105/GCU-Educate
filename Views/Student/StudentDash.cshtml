@model GuidanceTracker.Models.ViewModels.StudentDashViewModel
@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center mt-2 mb-3">
        @TempData["Success"]
    </div>
}


<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        .dashboard-container {
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            padding: 20px;
            gap: 20px;
        }

        .custom-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .custom-card:hover {
                transform: translateY(-5px);
            }
    </style>
</head>
<!-- link for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
<body>
    <div class="dashboard-container">
        <div class="row g-4">
            <!-- welcome text -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card" style="background-color: #F4F4F4">
                    <div class="card-body">
                        <h5 class="card-title">Hi, @Model.FirstName!</h5>
                        <p class="card-text">Welcome to your Student Dashboard. </p>
                        <p class="text-muted" id="currentDateTime"></p>
                    </div>
                </div>
            </div>

            <!--  appointments -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card custom-card">
                    <div class="card-body" style="text-align:center">
                        <i class="fa-solid fa-calendar-week" style="color: #7F3D98; font-size: 80px;"></i>
                        <p class="card-title" style="color: #7F3D98">Upcoming Appointments</p>
                        <p class="h3" style="color: #7F3D98">@Model.UpcomingAppointmentsCount</p>
                        <p>@Html.ActionLink("View more >", "UpcomingAppoinments", "Student", null, new { @class = "text-muted text-decoration-none" })</p>
                    </div>
                </div>
            </div>
            <!--Request Appointment -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card custom-card">
                    <div class="card-body" style="text-align:center">
                        <i class="fa-solid fa-calendar-check" style="color: #7F3D98; font-size: 80px;"></i>
                        <p class="card-title" style="color: #7F3D98">Request Appointment</p>
                        <p>@Html.ActionLink("View more >", "RequestAppointment", "Student", null, new { @class = "text-muted text-decoration-none" })</p>
                    </div>
                </div>
            </div>

            <!-- messages -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card custom-card">
                    <div class="card-body" style="text-align:center">
                        <i class="fa-solid fa-comments" style="color: #7F3D98; font-size: 80px;"></i>
                        <p class="card-title" style="color: #7F3D98">New Messages</p>
                        <p class="h3" style="color: #7F3D98">@Model.NewMessagesCount</p>
                        @Html.ActionLink("View more >", "Index", "Message", null, new { @class = "text-muted text-decoration-none" })
                    </div>
                </div>
            </div>

            <!-- posts -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card custom-card" style="text-align:center">
                    <div class="card-body">
                        <i class="fa-solid fa-scroll" style="color: #7F3D98; font-size: 80px;"></i>
                        <p class="card-title" style="color: #7F3D98">New Posts</p>
                        <p class="h3" style="color: #7F3D98">@Model.NewAnnouncementsCount</p>
                        <p>@Html.ActionLink("View more >", "ViewPosts", "Post", null, new { @class = "text-muted text-decoration-none" })</p>
                    </div>
                </div>
            </div>
            <!-- feedback -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card custom-card" style="text-align:center">
                    <div class="card-body">
                        <i class="fa-solid fa-bullhorn" style="color: #7F3D98; font-size: 80px;"></i>
                        <p class="card-title" style="color: #7F3D98">Leave Feedback</p>
                        <p>@Html.ActionLink("To the form >", "StudentFeedbackDashboard", "SimpleFeedback", null, new { @class = "text-muted text-decoration-none" })</p>
                    </div>
                </div>
            </div>



        </div>
    </div>
</body>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script>

        // script to dynamically show the current date and time on the dash
        function updateClock() {
            const now = new Date();
            const formatted = now.toLocaleString('en-GB', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });

            document.getElementById('currentDateTime').innerText = formatted;
        }
        updateClock();

        // updates the time every second
        setInterval(updateClock, 1000);

            $(document).ready(function () {
                setTimeout(function () {
                    $(".alert-success").fadeOut("slow");
                }, 3000); // fades after 3 seconds
        });
    </script>
}
