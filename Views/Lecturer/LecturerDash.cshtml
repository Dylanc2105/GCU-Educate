@model GuidanceTracker.Models.ViewModels.LecturerDashViewModel
@{
    ViewBag.Title = "Lecturer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        .stat-icon {
            color: #7F3D98;
            font-size: 70px;
            margin-bottom: 10px;
        }

        .stat-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #7F3D98;
            margin-bottom: 5px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        .view-more-link {
            font-size: 1rem;
            color: #7F3D98;
            text-decoration: underline;
        }

        .custom-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .welcome-card {
            background-color: #f4f4f4;
            border-radius: 10px;
            padding: 16px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .welcome-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #7F3D98;
                margin-bottom: 5px;
            }

            .welcome-card p {
                font-size: 1rem;
                color: #555;
                margin-bottom: 4px;
            }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row g-4">

            <!-- Welcome Card -->
            <div class="col-12" id="welcomeCard">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h5 class="card-title">Hi, @Model.FirstName!</h5>
                        <p class="card-text">Welcome to your Lecturer Dashboard.</p>
                        <p class="text-muted" id="currentDateTime"></p>
                    </div>
                </div>
            </div>

            <!-- Active Issues -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <i class="fa-solid fa-file stat-icon"></i>
                        <p class="stat-title">Active Issues</p>
                        <p class="stat-number">@Model.ActiveIssuesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Issue", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Messages -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <i class="fa-solid fa-comments stat-icon"></i>
                        <p class="stat-title">New Messages</p>
                        <p class="stat-number">@Model.NewMessagesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Message", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Posts -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <i class="fa-solid fa-scroll stat-icon"></i>
                        <p class="stat-title">New Posts</p>
                        <p class="stat-number">@Model.NewAnnouncementsCount</p>
                        <p>@Html.ActionLink("View more >", "ViewPosts", "Post", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            function updateClock() {
                const now = new Date();
                const formatted = now.toLocaleString('en-GB', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });

                document.getElementById('currentDateTime').innerText = formatted;
            }

            updateClock();
            setInterval(updateClock, 1000);
        </script>
    }
</body>
