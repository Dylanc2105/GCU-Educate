@model GuidanceTracker.Models.ViewModels.LecturerDashViewModel
@{
    ViewBag.Title = "Lecturer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: white;
            margin: 0;
            padding: 0;
        }

        .welcome-illustration img {
            width: 60px;
            height: 60px;
            opacity: 0.2;
        }

        .welcome-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .stat-icon-img {
            width: 70px;
            height: 70px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        .stat-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #7F3D98;
            margin-bottom: 5px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 400;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        .view-more-link {
            font-size: 1rem;
            color: #7F3D98;
            text-decoration: underline;
        }

        .custom-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .welcome-card {
            background-color: white;
            border-radius: 10px;
            padding: 16px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .welcome-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #7F3D98;
                margin-bottom: 5px;
            }

            .welcome-card p {
                font-size: 1rem;
                color: #555;
                margin-bottom: 4px;
            }

        .online-badge {
            display: flex;
            align-items: center;
            gap: 6px;
            background-color: rgba(0, 128, 0, 0.1);
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.85rem;
        }

        .dot {
            height: 10px;
            width: 10px;
            background-color: green;
            border-radius: 50%;
        }

        .online-text {
            color: green;
            font-weight: 600;
        }

        .online-badge.offline {
            background-color: rgba(128, 128, 128, 0.15);
        }

        .dot.offline {
            background-color: gray;
        }

        .online-text.offline {
            color: gray;
        }

    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <div class="row g-4">

            <!-- Welcome Card -->
            <div class="col-12" id="welcomeCard">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h5 class="card-title d-flex align-items-center gap-3">
                            Hi, @Model.FirstName!
                            <span class="online-badge" id="onlineStatusBadge">
                                <span class="dot" id="onlineDot"></span>
                                <span class="online-text" id="onlineText">Online</span>
                            </span>
                        </h5>
                        <p class="card-text">Welcome to your Lecturer Dashboard.</p>
                        <p class="text-muted" id="currentDateTime"></p>
                    </div>
                   
                </div>
            </div>

            <!-- Active Issues -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/issues.svg" class="stat-icon-img" alt="Issues" />
                        <p class="stat-title">Active Issues</p>
                        <p class="stat-number">@Model.ActiveIssuesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Issue", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Messages -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/messages.svg" class="stat-icon-img" alt="Messages" />
                        <p class="stat-title">New Messages</p>
                        <p class="stat-number">@Model.NewMessagesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Message", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Posts -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/posts.svg" class="stat-icon-img" alt="Posts" />
                        <p class="stat-title">New Posts</p>
                        <p class="stat-number">@Model.NewAnnouncementsCount</p>
                        <p>@Html.ActionLink("View more >", "ViewPosts", "Post", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            function updateClock() {
                const now = new Date();
                const formatted = now.toLocaleString('en-GB', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });

                document.getElementById('currentDateTime').innerText = formatted;
            }

            updateClock();
            setInterval(updateClock, 1000);

            document.addEventListener('DOMContentLoaded', function () {
                const manuallyOffline = false; // Replace with real flag/logic if needed
                if (manuallyOffline) {
                    document.getElementById('onlineStatusBadge').classList.add('offline');
                    document.getElementById('onlineDot').classList.add('offline');
                    document.getElementById('onlineText').classList.add('offline');
                    document.getElementById('onlineText').innerText = 'Offline';
                }
            });

        </script>
    }
</body>
