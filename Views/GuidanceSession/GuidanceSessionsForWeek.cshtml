@model IEnumerable<IGrouping<DayOfWeek, GuidanceTracker.Models.GuidanceSession>>

<div class="dashboard-card">
    <h1 class="dashboard-title">Weekly Guidance Sessions</h1>

    <div class="accordion">
        @foreach (var dayGroup in Model)
        {
            <div class="accordion-item">
                <h3 class="accordion-header" id="heading-@dayGroup.Key">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@dayGroup.Key" aria-expanded="false" aria-controls="collapse-@dayGroup.Key">
                        @dayGroup.Key.ToString()
                    </button>
                </h3>
                <div id="collapse-@dayGroup.Key" class="accordion-collapse collapse" aria-labelledby="heading-@dayGroup.Key" data-bs-parent=".accordion">
                    <div class="accordion-body">
                        @if (dayGroup.Any())
                        {
                            <ul>
                                @foreach (var session in dayGroup)
                                {
                                    <li class="guidance-item" data-session-id="@session.GuidanceSessionId">
                                        <p class="card-title"> @session.Class.ClassName</p>
                                        <strong>Time:</strong> @session.Time.ToString("hh\\:mm")<br />
                                        <strong>Room:</strong> @session.Room<br />
                                        <p>
                                            @if (session.Appointments.Count() == 1)
                                            {
                                            <p class="btn">1 appointment for this session </p>}
                                        else
                                        {<p class="btn">@session.Appointments.Count() appointments for this session </p>}

                                        </li>
                                        <hr />
                                    }
                            </ul>
                        }
                        else
                        {
                            <p>No guidance sessions scheduled for this day.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    <div id="partialAppointments"></div>



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/your-custom-script.js"></script>

    <style>
        .dashboard-card {
            padding: 20px;
            background-color: #7F3D98;
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            max-width: 1200px;
            margin: 20px auto;
        }

        .dashboard-title {
            font-size: 30px;
            font-weight: bold;
            color: white;
            margin-bottom: 20px;
        }

        .btn {
            color: white;
            border: none;
            border-radius: 10px;
            padding: 8px 16px;
            cursor: pointer;
            font-size: 14px;
            background-color: #7F3D98; 
            transition: background-color 0.3s ease; 
        }

            .btn:hover {
                background-color: #985BAF;
                color: white;
            }

        .accordion-button:not(.collapsed) {
            color: #000;
            background-color: #f8f9fa;
        }

        .accordion-button:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
    </style>




    <script>
        $(document).ready(function () {
            $(".guidance-item").click(function () {
                var sessionId = $(this).data("session-id");
                var url = '@Url.Action("AppointmentsForSessionPartial", "Appointment")';

                $.get(url, { id: sessionId }, function (data) {
                    $("#partialAppointments").html(data);
                });
            });

        });
    </script>











