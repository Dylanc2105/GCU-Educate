            } else {
                logo.style.opacity = "1";
                logo.style.pointerEvents = "auto";

                controls.style.opacity = "1";
                controls.style.pointerEvents = "auto";
            }
        });
    </script>

    <script>
        const logo = document.querySelector('.center-logo');

        window.addEventListener("scroll", function () {
            let scrollTop = window.scrollY || document.documentElement.scrollTop;

            if (scrollTop > 20) {
                // Scrolled down - hide logo
                logo.style.opacity = "0";
                logo.style.pointerEvents = "none";
            } else {
                // Back at top - show logo
                logo.style.opacity = "1";
                logo.style.pointerEvents = "auto";
            }
        });
    </script>



    <!-- SystemSettings Modal -->
    <div id="SystemSettingsModal" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Account Settings</h3>
                <button class="close-btn" onclick="closeSystemSettingsModal()">×</button>
            </div>

            <!-- Preferences Section -->
            <div class="setting-section">
                <h4 class="section-title">Preferences</h4>

                <div class="setting-row">
                    <span>Disable Email Alerts</span>
                    <label class="toggle-label">
                        <input type="checkbox" />
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="setting-row">
                    <span>Play Notification Sounds</span>
                    <label class="toggle-label">
                        <input type="checkbox" onchange="toggleSoundSetting(this.checked)" />
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="setting-row">
                    <span>Hide Welcome Message</span>
                    <label class="toggle-label">
                        <input type="checkbox" onchange="toggleWelcomeSetting(this.checked)" />
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="setting-row">
                    <span>Disable Secure Timeout</span>
                    <label class="toggle-label">
                        <input type="checkbox" />
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="setting-row">
                    <span>Appear Offline</span>
                    <label class="toggle-label">
                        <input type="checkbox" onchange="toggleAppearOffline(this.checked)" id="appearOfflineToggle" />
                        <span class="slider"></span>
                    </label>
                </div>
            </div>

            <!-- Account Info Section -->
            <div class="setting-section">
                <h4 class="section-title">Account Info</h4>

                <div class="setting-row">
                    <span>My details</span>
                    <button class="setting-btn" onclick="window.location.href='/Account/Details'">View Details</button>
                </div>

                <div class="setting-row">
                    <span>Notification History</span>
                    <button class="setting-btn" onclick="window.location.href='/Notification/All'">View History</button>
                </div>

                <div class="setting-row">
                    <small style="color: gray;">
                        <span>Spotted an error: </span>
                        <a href="@Url.Action("Report", "Account")">report it here!</a>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Sound -->
    <audio id="notificationSound" src="~/Sounds/notification.mp3" preload="auto"></audio>
