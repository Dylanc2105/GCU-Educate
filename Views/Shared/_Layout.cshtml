<script>
    // Tracks previously loaded notification IDs to detect new ones
    let previousNotificationIds = [];

    $(document).ready(function () {
        const bell = $('#notificationsDropdown');
        const dropdown = $('#notificationContent');

        // Fetch notifications on bell click
        bell.on('click', function (e) {
            e.stopPropagation();

            $.get('/Notification/GetRecentNotifications', function (data) {
                const newIds = [];
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = data;
                tempDiv.querySelectorAll('[id^="notification-"]').forEach(el => {
                    const id = el.id.split('-')[1];
                    if (id) newIds.push(id);
                });

                // Play sound if new notifications are found
                const isNew = newIds.some(id => !previousNotificationIds.includes(id));
                if (isNew && localStorage.getItem('playNotificationSound') === 'true') {
                    const audio = document.getElementById('notificationSound');
                    if (audio) audio.play();
                }

                previousNotificationIds = newIds;
                dropdown.html(data).addClass('show').css('display', 'block');
            }).fail(function (xhr, status, error) {
                console.error("❌ AJAX failed:", error);
            });
        });

        // Hide dropdown when clicking outside
        $(document).on('click', function (e) {
            if (!dropdown.is(e.target) && dropdown.has(e.target).length === 0) {
                dropdown.hide();
            }
        });

        updateNotificationBadge(); // initial badge update
        setInterval(updateNotificationBadge, 60000); // poll every 60s

        // Auto-fade success alerts
        setTimeout(function () {
            $(".alert-success").fadeOut("slow");
        }, 3000);

        // Load and apply sound toggle preference
        const setting = localStorage.getItem('playNotificationSound') === 'true';
        document.querySelectorAll('input[type=checkbox]').forEach(cb => {
            if (cb.parentElement.previousElementSibling?.textContent?.includes("Notification Sounds")) {
                cb.checked = setting;
            }
        });
    });

    // Store sound toggle setting
    function toggleSoundSetting(enabled) {
        localStorage.setItem('playNotificationSound', enabled);
    }

    // Open/close system settings modal
    function openSystemSettingsModal() {
        document.getElementById('SystemSettingsModal').classList.add('show-modal');
    }
    function closeSystemSettingsModal() {
        document.getElementById('SystemSettingsModal').classList.remove('show-modal');
    }

    // Update badge with unread count
    function updateNotificationBadge() {
        $.get('/Notification/GetUnreadCount', function (data) {
            const badge = $('#notificationBadge');
            if (data.count > 0) {
                badge.text(data.count);
                badge.show();
            } else {
                badge.hide();
            }
        });
    }

    // Mark one notification as read then redirect
    function markAsRead(id, url) {
        const item = document.getElementById("notification-" + id);
        if (item) item.classList.remove("font-weight-bold");

        $.post('/Notification/MarkAsRead', { id: id }, function () {
            window.location.href = url;
        }).fail(function () {
            window.location.href = url;
        });
    }

    // Store welcome message toggle
    function toggleWelcomeSetting(enabled) {
        localStorage.setItem('hideWelcome', enabled);
        const welcomeCard = document.getElementById('welcomeCard');
        if (welcomeCard) {
            welcomeCard.style.display = enabled ? 'none' : '';
        }
    }

    // Store and reflect appear offline toggle
    function toggleAppearOffline(isOffline) {
        localStorage.setItem('appearOffline', isOffline);
        updateOnlineBadge();

        fetch('/Account/SetAppearOffline', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `appearOffline=${isOffline}`
        }).catch(err => console.error('Failed to update appearOffline:', err));
    }

    // Update online badge visual
    function updateOnlineBadge() {
        const isOffline = localStorage.getItem('appearOffline') === 'true';
        const badge = document.getElementById('onlineStatusBadge');
        const dot = document.getElementById('onlineDot');
        const text = document.getElementById('onlineText');

        if (isOffline) {
            badge?.classList.add('offline');
            dot?.classList.add('offline');
            text?.classList.add('offline');
            if (text) text.textContent = 'Offline';
        } else {
            badge?.classList.remove('offline');
            dot?.classList.remove('offline');
            text?.classList.remove('offline');
            if (text) text.textContent = 'Online';
        }
    }

    // On DOM load, apply offline toggle
    document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.getElementById('appearOfflineToggle');
        if (toggle) {
            toggle.checked = localStorage.getItem('appearOffline') === 'true';
        }
        updateOnlineBadge();
    });

    // SweetAlert logout confirmation
    function confirmLogout() {
        Swal.fire({
            title: 'Confirm Logout',
            text: 'Are you sure you want to log out of your account?',
            icon: 'warning',
            customClass: {
                popup: 'swal-popup',
                title: 'swal-title',
                htmlContainer: 'swal-body',
                confirmButton: 'swal-confirm',
                cancelButton: 'swal-cancel'
            },
            showCancelButton: true,
            confirmButtonText: 'Yes, log me out',
            cancelButtonText: 'Cancel',
            buttonsStyling: false
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('logoutForm').submit();
            }
        });
    }
</script>
