@model GuidanceTracker.Models.Student
@{
    ViewBag.Title = "Student Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #8e44ad; color: white;">
                    <h4 class="mb-0">
                        <i class="fa fa-user-graduate me-2"></i>Student Profile
                    </h4>
                    <div>
                        @if (Model.IsClassRep)
                        {
                            <span class="badge" style="background-color: #9b59b6; color: white;">Class Rep</span>
                        }
                        @if (Model.IsDeputyClassRep)
                        {
                            <span class="badge" style="background-color: #9b59b6; color: white;">Deputy Class Rep</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title mb-3">Personal Information</h5>
                            <table class="table table-sm">
                                <tr>
                                    <th class="w-40">Name</th>
                                    <td>@Model.FirstName @Model.LastName</td>
                                </tr>
                                <tr>
                                    <th>Student Number</th>
                                    <td>@Model.StudentNumber</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td>@Model.PhoneNumber</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title mb-3">Address Information</h5>
                            <table class="table table-sm">
                                <tr>
                                    <th class="w-40">Street</th>
                                    <td>@Model.Street</td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>@Model.City</td>
                                </tr>
                                <tr>
                                    <th>Postcode</th>
                                    <td>@Model.Postcode</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-4">
                            <h5 class="card-title mb-3">Academic Information</h5>
                            <table class="table table-sm">
                                <tr>
                                    <th class="w-40">Class</th>
                                    <td>@Model.Class.ClassName</td>
                                </tr>
                                <tr>
                                    <th>Guidance Teacher</th>
                                    <td>@Model.GuidanceTeacher.FirstName @Model.GuidanceTeacher.LastName</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-4">
                            <h5 class="card-title mb-3">Issue Tracking</h5>
                            <div class="card bg-light">
                                <div class="card-body py-3">
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="fs-4 fw-bold" style="color: #8e44ad;">@ViewBag.CurrentIssueCount</div>
                                            <div class="small text-muted">Current</div>
                                        </div>
                                        <div class="col-4">
                                            <div class="fs-4 fw-bold" style="color: #9b59b6;">@ViewBag.ArchivedIssueCount</div>
                                            <div class="small text-muted">Archived</div>
                                        </div>
                                        <div class="col-4">
                                            <div class="fs-4 fw-bold text-dark">@ViewBag.TotalIssueCount</div>
                                            <div class="small text-muted">Total</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h5 class="card-title mb-3">Appointment Tracking</h5>
                            <div class="card bg-light">
                                <div class="card-body py-3">
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="fs-4 fw-bold" style="color: #8e44ad;">@ViewBag.ScheduledAppointments</div>
                                            <div class="small text-muted">Scheduled</div>
                                        </div>
                                        <div class="col-4">
                                            <div class="fs-4 fw-bold" style="color: #9b59b6;">@ViewBag.CompletedAppointments</div>
                                            <div class="small text-muted">Complete</div>
                                        </div>
                                        <div class="col-4">
                                            <div class="fs-4 fw-bold text-dark">@ViewBag.TotalAppointments</div>
                                            <div class="small text-muted">Total</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (!Model.IsClassRep && !Model.IsDeputyClassRep)
                    {
                        <div class="mt-4">
                            <h5 class="card-title mb-3">Class Representative Status</h5>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="text-muted mb-3">This student is not currently a class representative.</p>
                                    <div class="d-grid gap-2">
                                        @Html.ActionLink("Elect as Class Rep", "ElectStudentRep", "GuidanceTeacher",
                                            new { id = Model.Id },
                                            new { @class = "btn btn-primary", @style = "background-color: #8e44ad; border-color: #8e44ad;" })

                                        @Html.ActionLink("Elect as Deputy Class Rep", "ElectDeputyStudentRep", "GuidanceTeacher",
                                            new { id = Model.Id },
                                            new { @class = "btn btn-secondary", @style = "background-color: #9b59b6; border-color: #9b59b6;" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

}