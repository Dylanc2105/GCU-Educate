@model GuidanceTracker.Models.ViewModels.CurriculumDashViewModel

@{
    ViewBag.Title = "Curriculum Head Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">
        var msg = "@ViewBag.Message";
        alert(msg);
    </script>
}

<title>@ViewBag.Title</title>

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }

        .stat-icon-img {
            width: 70px;
            height: 70px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        .stat-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #7F3D98;
            margin-bottom: 5px;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #7F3D98;
            margin-bottom: 10px;
        }

        .view-more-link {
            font-size: 1rem;
            color: #7F3D98;
            text-decoration: underline;
        }

        .custom-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.2s ease;
        }

            .custom-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .dashboard-title {
            color: #7F3D98;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .welcome-card {
            background-color: #f4f4f4;
            border-radius: 10px;
            padding: 16px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 25px;
        }

            .welcome-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
                color: #7F3D98;
                margin-bottom: 5px;
            }

            .welcome-card p {
                font-size: 1rem;
                color: #555;
                margin-bottom: 4px;
            }

        .welcome-illustration img {
            width: 60px;
            height: 60px;
            opacity: 0.2;
        }

        .welcome-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }
    </style>
</head>

<body>
    <div class="container-fluid py-4">
        <h2 class="dashboard-title">Curriculum Head Dashboard</h2>

        <!-- Welcome Card -->
        <div class="row">
            <div class="col-12">
                <div class="card welcome-card">
                    <div class="card-body welcome-row">
                        <div>
                            <h5>Hi, @Model.FirstName!</h5>
                            <p>Welcome to your Guidance Dashboard.</p>
                            <p class="text-muted" id="currentDateTime"></p>
                        </div>
                        <div class="welcome-illustration">
                            <img src="~/Images/Icons/PURPLE/student.png" alt="Welcome Icon" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stat Cards -->
        <div class="row g-4">
            <!-- New Feedback -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/feedback.png" alt="Feedback Icon" class="stat-icon-img" />
                        <p class="stat-title">New Feedback</p>
                        <p class="stat-number">@Model.NewFeedbackCount</p>
                        <p>@Html.ActionLink("View more >", "ViewUnreadReceivedSimpleFeedbacks", "DetailedFeedback", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Messages -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/messages.png" alt="Messages Icon" class="stat-icon-img" />
                        <p class="stat-title">New Messages</p>
                        <p class="stat-number">@Model.UnreadMessagesCount</p>
                        <p>@Html.ActionLink("View more >", "Index", "Message", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>

            <!-- New Posts -->
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card custom-card text-center">
                    <div class="card-body">
                        <img src="~/Images/Icons/PURPLE/posts.png" alt="Posts Icon" class="stat-icon-img" />
                        <p class="stat-title">New Posts</p>
                        <p class="stat-number">@Model.NewAnnouncementsCount</p>
                        <p>@Html.ActionLink("View more >", "ViewPosts", "Post", null, new { @class = "view-more-link" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            function updateClock() {
                const now = new Date();
                const formatted = now.toLocaleString('en-GB', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
                document.getElementById('currentDateTime').innerText = formatted;
            }

            updateClock();
            setInterval(updateClock, 1000);
        </script>
    }
</body>
