@model GuidanceTracker.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<title>@ViewBag.Title</title>
<body style="background-color: #ADAEB3; ">

    <main aria-labelledby="title">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-5 col-xl-5">
                        <div class="card shadow p-5 bg-white text-black" style="border-radius: 1rem;">
                            <div class="card-body p-3 text-center">
                                <img src="~/Images/Icons/Logo-Purple.png" alt="Logo" style="max-width: 300px; margin-bottom: 20px;">


                                <h2 class="mb-3">Change Password</h2>
                                <p class="text-black-50 mb-4">Please enter your email.</p>

                                <div class="mb-4 text-start col-9 mx-auto">
                                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </div> 
                                <button class="btn mt-3 w-75" type="submit" style="background-color: #7E3F96; color: white; ">Email Link</button>
                                <p class="small mb-3 pb-lg-2" style="padding-top: 20px;">
                                    @Html.ActionLink("Back to Login", "Login", null, new { @class = "text-black-50" })
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        }
    </main>
</body>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
