@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<title>@ViewBag.Title</title>
<body style="background-color: #ADAEB3; ">
    <main aria-labelledby="title">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-5 col-xl-5">
                    <div class="card shadow p-5 bg-white text-black" style="border-radius: 1rem;">
                        <div class="card-body p-3 text-center">
                            <img src="~/Images/GTLogo.png" alt="Logo" style="max-width: 300px; margin-bottom: 20px;">

                            <h2 class="mb-3">Confirmation Email Sent</h2>
                            <p class="text-black-50 mb-4">Please check your email to reset your password.</p>
                            <p class="small mb-3 pb-lg-2" style="padding-top: 20px;">
                                @Html.ActionLink("Back to Login", "Login", null, new { @class = "text-black-50" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </main>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}