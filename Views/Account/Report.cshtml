@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Report an Issue";
}

<div class="panel-container">
    <div class="panel-heading">
        <h2>Report an Issue</h2>
    </div>

    <form id="reportForm" enctype="multipart/form-data" class="panel-body">
        <div class="form-group">
            <label for="title">Report Title</label>
            <input type="text" id="title" name="title" required placeholder="e.g. Login button not working" />
        </div>

        <div class="form-group">
            <label for="email">Your Email</label>
            <input type="email" id="email" name="email" required placeholder="your.name@college.ac.uk" />
        </div>

        

        <div class="form-group">
            <label for="details">Details</label>
            <textarea id="details" name="details" rows="5" required placeholder="Include relevant steps, pages, or error messages..."></textarea>
        </div>

        <div class="form-group">
            <label for="attachment">Attach File (optional)</label>
            <input type="file" id="attachment" name="attachment" multiple />
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-btn">Submit Report</button>
            <a href="@Url.Action("Index", "Home")" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>

<!-- Popup -->
<div id="thankYouPopup" class="popup">
    <div class="popup-content">
        <h3>Feedback Submitted</h3>
        <p>Your report has been sent to the development team.</p>
        <p>Thanks for helping improve the system.</p>
        <button onclick="closePopup()">Close</button>
    </div>
</div>

<style>
    .panel-container {
        max-width: 700px;
        margin: 60px auto;
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0,0,0,0.1);
        background: #fff;
    }

    .panel-heading {
        background-color: #7F3D98;
        padding: 16px 24px;
    }

        .panel-heading h2 {
            color: white;
            margin: 0;
            font-size: 22px;
        }

    .panel-body {
        padding: 30px 40px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 6px;
        color: #333;
    }

    input[type="text"],
    input[type="email"],
    textarea,
    input[type="file"] {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    textarea {
        resize: vertical;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .submit-btn,
    .cancel-btn {
        padding: 10px 20px;
        border: none;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
    }

    .submit-btn {
        background: #7F3D98;
        color: white;
    }

        .submit-btn:hover {
            background: #985BAF;
        }

    .cancel-btn {
        background: #eee;
        color: #333;
    }

        .cancel-btn:hover {
            background: #ddd;
        }

    .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0,0,0,0.5);
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .popup-content {
        background: white;
        padding: 40px 50px;
        border-radius: 10px;
        max-width: 500px;
        width: 90%;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.25);
    }

        .popup-content h3 {
            color: #7F3D98;
            margin-bottom: 15px;
        }

        .popup-content p {
            margin: 10px 0;
            font-size: 15px;
        }

        .popup-content button {
            margin-top: 20px;
            background: #7F3D98;
            color: white;
            padding: 10px 18px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
        }

            .popup-content button:hover {
                background: #985BAF;
            }
</style>

<script>
    
    function closePopup() {
        document.getElementById('thankYouPopup').style.display = 'none';
    }
    document.getElementById('reportForm').addEventListener('submit', function (e) {
        e.preventDefault();

        // simulate backend response
        setTimeout(() => {
            this.reset();
            document.getElementById('thankYouPopup').style.display = 'flex';
        }, 400);
    });
</script>
