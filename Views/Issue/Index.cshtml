@model List<GuidanceTracker.Models.Issue>
@using GuidanceTracker.Models

@{
    ViewBag.Title = "Issues Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Ensure jQuery is loaded -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    body {
        background-color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Dashboard Grid */
    .dashboard-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
        padding: 20px;
    }

    /* Left Side Containers (New & In Progress Issues) */
    .left-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        border-radius: 10px;
        
    }

    /* Each container style */
    .container {
        background: white;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        min-height: 180px;
    }

    /* Issue Cards */
    .issue-card {
        padding: 10px;
        border-left: 5px solid #7F3D98;
        margin-bottom: 8px;
        background: #FAFAFA;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .issue-card:hover {
            background: #EEE;
        }

    .issue-main {
        font-weight: bold;
        font-size: 14px;
    }

    .issue-update {
        font-size: 12px;
        color: #555;
    }

    .issue-date {
        font-size: 10px;
        color: #888;
    }

    /* Issue Footer */
    .issue-footer {
        font-size: 10px;
        text-align: right;
        padding-top: 5px;
        font-style: italic;
        color: black;
    }

    /* Quick Actions */
    .quick-actions {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 10px;
        border-radius: 10px;
        
    }

    .quick-btn {
        padding: 10px;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        color: white;
        font-weight: bold;
        transition: background 0.3s ease;
        background: #7F3D98;
    }

        .quick-btn:hover {
            background: #985BAF;
        }

    /* Right Container */
    .right-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        height: 100%;
    }

    /* Right Container Box */
    .bottom-right-container {
        background: white;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        min-height: 320px;
    }

    /* Section Titles */
    .section-title {
        font-size: 22px;
        font-weight: bold;
        color: black;
        margin-bottom: 15px;
        text-align: center;
    }

    /* karina: styling for view more buttons and stuff */
    .view-more-btn {
        background-color: #7F3D98;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 10px;
    }


    .full-issues-list {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1000;
    }

    .modal-backdrop {
        background-color: rgba(0,0,0,0.5);
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: white;
        width: 80%;
        max-width: 800px;
        max-height: 80vh;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        overflow: hidden;
    }

    .modal-header {
        padding: 15px;
        background-color: #f5f5f5;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ddd;
    }
        .modal-header img {
            width: 25px;
            height: 25px;
        }

    .modal-body {
        padding: 15px;
        max-height: calc(80vh - 60px);
        overflow-y: auto;
    }

    .close-btn {
        font-size: 24px;
        cursor: pointer;
    }

        .close-btn:hover {
            color: #666;
        }
    .issue-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eaecef;
        border-left: none;
        font-weight: bold;
        cursor: default;
        pointer-events: none;
    }
    

    .section-title img {
        width: 25px;
        height: 25px;
        vertical-align: middle;
        margin-left: 8px;
    }
</style>

<h1 class="dashboard-title">Issues Dashboard</h1>

<!-- Dashboard Layout -->
<div class="dashboard-container">

    <!-- Left Containers (New & In Progress Issues) -->
    <div class="left-container">
        <!-- New Issues -->
        <div class="container">
            <div class="section-title">New <img src="~/Images/Icons/OTHER/new.svg"/></div>
            <!-- karina: headings for the table-->
            <div class="issue-card issue-header">
                <div class="issue-main">Student</div>
                <div class="issue-main">Issue</div>
                <div class="issue-main">Date</div>
            </div>
            @foreach (var issue in Model.Where(t => t.IssueStatus == IssueStatus.New).OrderByDescending(t => t.CreatedAt).Take(4))
            {
                <div class="issue-card" onclick="window.location.href='@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })'">
                    <div class="issue-main">@issue.Student.FirstName @issue.Student.LastName</div>
                    <div class="issue-update">@issue.IssueTitle.ToString()</div>
                    <div class="issue-date">@issue.CreatedAt.ToString("dd/MM/yyyy")</div>
                </div>
            }

            <div class="issue-footer">
                Total New Issues: <strong>@Model.Count(t => t.IssueStatus == IssueStatus.New)</strong>
                <!-- karina: if t here are more that 4 issues a button view more appears to see them all-->
                @if (Model.Count(t => t.IssueStatus == IssueStatus.New) > 4)
                {
                    <button id="view-more-new" class="view-more-btn" onclick="toggleIssues('new')">View More</button>
                }
            </div>
        </div>

        <!-- In Progress Issues -->
        <div class="container">
            <div class="section-title">In Progress <img src="~/Images/Icons/OTHER/inProgress.svg" /></div>
            <!-- karina: headings for the table-->
            <div class="issue-card issue-header">
                <div class="issue-main">Student</div>
                <div class="issue-main">Issue</div>
                <div class="issue-main">Date</div>
            </div>

            @foreach (var issue in Model.Where(t => t.IssueStatus == IssueStatus.InProgress).OrderByDescending(t => t.CreatedAt).Take(4))
            {
                <div class="issue-card" onclick="window.location.href='@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })'">
                    <div class="issue-main">@issue.Student.FirstName @issue.Student.LastName</div>
                    <div class="issue-update">Update to @issue.IssueTitle.ToString()</div>
                    <div class="issue-date">@issue.CreatedAt.ToString("dd/MM/yyyy")</div>
                </div>
            }

            <div class="issue-footer">
                Total In Progress Issues: <strong>@Model.Count(t => t.IssueStatus == IssueStatus.InProgress)</strong>
                <!-- karina: if t here are more that 4 issues a button view more appears to see them all-->
                @if (Model.Count(t => t.IssueStatus == IssueStatus.InProgress) > 4)
                {
                    <button id="view-more-inprogress" class="view-more-btn" onclick="toggleIssues('inprogress')">View More</button>
                }
            </div>
        </div>
    </div>

    <!-- karina: hidden full lists for new issues that will be shown when view more is clicked -->
    <div id="new-issues-full" class="full-issues-list" style="display: none;">
        <div class="modal-backdrop">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>All New Issues <img src="~/Images/Icons/OTHER/new.svg" /></h2>
                <span class="close-btn" onclick="toggleIssues('new')">&times;</span>
            </div>
                <div class="modal-body">
                    <!--  headings for the table-->
                    <div class="issue-card issue-header">
                        <div class="issue-main">Student</div>
                        <div class="issue-main">Issue</div>
                        <div class="issue-main">Date</div>
                    </div>
                    @foreach (var issue in Model.Where(t => t.IssueStatus == IssueStatus.New).OrderByDescending(t => t.CreatedAt))
                    {
                        <div class="issue-card" onclick="window.location.href='@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })'">
                            <div class="issue-main">@issue.Student.FirstName @issue.Student.LastName</div>
                            <div class="issue-update">@issue.IssueTitle.ToString()</div>
                            <div class="issue-date">@issue.CreatedAt.ToString("dd/MM/yyyy")</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- karina: hidden full lists for in progress issues that will be shown when view more is clicked -->
    <div id="in-progress-issues-full" class="full-issues-list" style="display: none;">
        <div class="modal-backdrop">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>All In Progress Issues <img src="~/Images/Icons/OTHER/inProgress.svg" /></h2>
                <span class="close-btn" onclick="toggleIssues('inprogress')">&times;</span>
            </div>
                <div class="modal-body">
                    <!--  headings for the table-->
                    <div class="issue-card issue-header">
                        <div class="issue-main">Student</div>
                        <div class="issue-main">Issue</div>
                        <div class="issue-main">Date</div>
                    </div>
                    @foreach (var issue in Model.Where(t => t.IssueStatus == IssueStatus.InProgress).OrderByDescending(t => t.CreatedAt))
                    {
                        <div class="issue-card" onclick="window.location.href='@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })'">
                            <div class="issue-main">@issue.Student.FirstName @issue.Student.LastName</div>
                            <div class="issue-update">Update to @issue.IssueTitle.ToString()</div>
                            <div class="issue-date">@issue.CreatedAt.ToString("dd/MM/yyyy")</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Right Containers (Quick Actions) -->
    <div class="right-container">
        <!-- Quick Actions -->
        <div class="bottom-right-container">
            <div class="section-title">Quick Actions</div>
            <div class="quick-actions">
                <!-- Existing Quick Action Buttons -->
                <a href="@Url.Action("CreateIssue", "Issue")" class="quick-btn">Create New <img src="~/Images/Icons/OTHER/createIssue.svg" /></a>
                <a href="@Url.Action("StudentIssue", "Issue")" class="quick-btn">Student Hub <img src="~/Images/Icons/OTHER/studentHub.svg" /></a>
                <a href="@Url.Action("AllIssues", "Issue")" class="quick-btn">All <img src="~/Images/Icons/OTHER/allIssues.svg" /></a>
                <a href="@Url.Action("ArchivedIssues", "Issue")" class="quick-btn">View Archived <img src="~/Images/Icons/OTHER/archived.svg" /></a>
        </div>
        </div>
    </div>

</div>

<script>
    // karina: this is for the view more issues button
    function toggleIssues(type) {
        var fullListId = type === 'new' ? 'new-issues-full' : 'in-progress-issues-full';
        var fullList = document.getElementById(fullListId);

        if (fullList.style.display === 'none') {
            fullList.style.display = 'block';
            document.body.style.overflow = 'hidden'; // prevents scrolling behind modal
        } else {
            fullList.style.display = 'none';
            document.body.style.overflow = 'auto'; 
        }
    }
</script>