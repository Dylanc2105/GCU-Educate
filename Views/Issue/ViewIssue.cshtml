        padding: 10px;
        background: #f4f4f4;
        border-left: 4px solid #7F3D98;
        margin-bottom: 10px;
        border-radius: 6px;
    }

    .btn-purple {
        background-color: #7F3D98;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 8px 14px;
        font-weight: 600;
        cursor: pointer;
    }

        .btn-purple.small {
            font-size: 12px;
            padding: 4px 10px;
        }

        .btn-purple:hover {
            background-color: #985BAF;
        }

    .issue-comments-panel {
        flex: 2;
        display: flex;
        flex-direction: column;
        background: #f9f9ff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.06);
        max-height: 85vh;
        overflow-y: auto;
    }

    .comment-box {
        background: white;
        padding: 10px 15px;
        margin-bottom: 12px;
        border-left: 4px solid #7F3D98;
