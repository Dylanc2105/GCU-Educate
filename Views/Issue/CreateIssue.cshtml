@model GuidanceTracker.Models.ViewModels.CreateIssueViewModel

@{
    ViewBag.Title = "Create New Issue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .page-title {
        font-size: 26px;
        font-weight: 600;
        color: #7F3D98;
        margin-bottom: 10px;
        text-align: center;
    }

    .back-button {
        display: inline-block;
        margin: 10px 0 20px 0;
        color: #7F3D98;
        font-weight: bold;
        text-decoration: none;
    }

        .back-button:hover {
            text-decoration: underline;
        }

    .split-form {
        max-width: 1200px;
        margin: 0 auto;
    }

    .form-section-container {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
    }

    .container-box {
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        flex: 1;
        min-width: 300px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    .student-checkbox-list {
        max-height: 180px;
        overflow-y: auto;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        background: #f9f9f9;
    }

    .student-option {
        margin-bottom: 6px;
    }

        .student-option label {
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .student-option input[type="checkbox"] {
            transform: scale(1.1);
            cursor: pointer;
        }

    .student-select-actions {
        margin-bottom: 10px;
        text-align: right;
    }

    .btn-small {
        padding: 5px 12px;
        font-size: 12px;
        border: none;
        background-color: #7F3D98;
        color: white;
        border-radius: 4px;
        cursor: pointer;
        transition: background 0.2s ease;
    }

        .btn-small:hover {
            background-color: #985BAF;
        }

    .btn-submit {
        background-color: #7F3D98;
        color: white;
        font-weight: bold;
        border: none;
        padding: 14px 24px;
        border-radius: 6px;
        font-size: 16px;
        width: 100%;
        margin-top: 15px;
        transition: background 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #985BAF;
        }
</style>


<h2 class="page-title">Create New Issue</h2>

<a href="@Url.Action("StudentIssue", "Issue")" class="back-button">← Back to Issue Hub</a>

@using (Html.BeginForm("CreateIssue", "Issue", FormMethod.Post, new { @class = "split-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-section-container">
        <div class="form-left container-box">
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedClassId, "Select Class")
                @Html.DropDownListFor(m => m.SelectedClassId, new SelectList(Model.Classes, "ClassId", "ClassName"), "Choose a class", new { @class = "form-control", @id = "classDropdown" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SelectedUnitId, "Select Unit")
                @Html.DropDownList("SelectedUnitId", new SelectList(Model.Units, "UnitId", "UnitName"), "Choose a unit", new { @class = "form-control", @id = "unitDropdown" })
            </div>

            <div class="form-group">
                @Html.Label("Select Students")
                <div class="student-select-actions">
                    <button type="button" id="toggleSelectAll" class="btn-small">Select All</button>
                </div>
                <div class="student-checkbox-list" id="studentDropdown">
                    @foreach (var student in Model.Students)
                    {
                        <div class="student-option">
                            <label>
                                <input type="checkbox" name="SelectedStudentIds" value="@student.Id" />
                                @student.FullName
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-right container-box">
            <div class="form-group">
                @Html.LabelFor(m => m.IssueTitle)
                @Html.EnumDropDownListFor(m => m.IssueTitle, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 6 })
            </div>

            <button type="submit" class="btn-submit">Raise Issue</button>
        </div>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            let allSelected = false;

            $('#toggleSelectAll').click(function () {
                allSelected = !allSelected;
                $('#studentDropdown input[type="checkbox"]').prop('checked', allSelected);
                $(this).text(allSelected ? 'Deselect All' : 'Select All');
            });

            $('#classDropdown').change(function () {
                const classId = $(this).val();

                $.getJSON('/Issue/GetUnits', { classId }, function (data) {
                    const unitDropdown = $('#unitDropdown');
                    unitDropdown.empty().append($('<option>').text('Choose a unit').attr('value', ''));

                    $.each(data, function (i, unit) {
                        unitDropdown.append($('<option>').text(unit.UnitName).attr('value', unit.UnitId));
                    });
                });

                $.getJSON('/Issue/GetStudentsForClass', { classId }, function (data) {
                    const studentContainer = $('#studentDropdown');
                    studentContainer.empty();

                    $.each(data, function (i, student) {
                        const checkbox = `
                                    <div class="student-option">
                                        <label>
                                            <input type="checkbox" name="SelectedStudentIds" value="${student.Id}" />
                                            ${student.FullName}
                                        </label>
                                    </div>`;
                        studentContainer.append(checkbox);
                    });

                    allSelected = false;
                    $('#toggleSelectAll').text('Select All');
                });
            });
        });
    </script>
}

