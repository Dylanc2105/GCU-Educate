@model List<GuidanceTracker.Models.Issue>

@{
    ViewBag.Title = "Archived Issues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="dashboard-title text-center mb-4">Archived Issues</h1>

<div class="container">
    <div class="table-container shadow p-4 rounded">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Issue Title</th>
                    <th>Status</th>
                    <th>Created On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var issue in Model)
                {
                    <tr>
                        <td>@issue.Student.FirstName @issue.Student.LastName</td>
                        <td>@issue.IssueTitle</td>
                        <td>@issue.IssueStatus</td>
                        <td>@issue.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })" class="btn btn-purple btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        console.log("✅ Archived Issues page loaded!");
    });
</script>

<style>
    body {
        background-color: #F4F4F4;
        font-family: "Arial", sans-serif;
    }

    .dashboard-title {
        font-size: 32px;
        color: #7F3D98;
        font-weight: bold;
    }

    .table-container {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        table th,
        table td {
            padding: 12px 15px;
            text-align: left;
        }

        table th {
            background-color: #7F3D98;
            color: white;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        table td {
            vertical-align: middle;
        }

    .btn-purple {
        background-color: #7F3D98;
        color: white;
        text-decoration: none;
        padding: 8px 15px;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-purple:hover {
            background-color: #985BAF;
        }

    .btn-sm {
        font-size: 12px;
        padding: 6px 12px;
    }
</style>
