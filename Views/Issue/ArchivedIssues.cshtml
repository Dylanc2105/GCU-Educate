@model List<GuidanceTracker.Models.Issue>

@{
    ViewBag.Title = "Archived Issues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Archived Issues</h1>

<table border="1">
    <tr>
        <th>Student Name</th>
        <th>Issue Title</th>
        <th>Status</th>
        <th>Created On</th>
        <th>Actions</th>
    </tr>

    @foreach (var issue in Model)
    {
        <tr>
            <td>@issue.Student.FirstName @issue.Student.LastName</td>
            <td>@issue.IssueTitle</td>
            <td>@issue.IssueStatus</td>
            <td>@issue.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>
                <a href="@Url.Action("ViewIssue", "Issue", new { id = issue.IssueId })">View</a>
            </td>
        </tr>
    }
</table>
