@model IEnumerable<IGrouping<GuidanceTracker.Models.Class, GuidanceTracker.Models.Issue>>
@using GuidanceTracker.Models
<h2>Issues by Class</h2>
<div class="accordion" id="issuesAccordion">
    @foreach (var classGroup in Model)
    {
        <div class="accordion-item">
            <h3 class="accordion-header" id="heading-@classGroup.Key.ClassId">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@classGroup.Key.ClassId" aria-expanded="false" aria-controls="collapse-@classGroup.Key.ClassId">
                    @classGroup.Key.ClassName
                </button>
            </h3>
            <div id="collapse-@classGroup.Key.ClassId" class="accordion-collapse collapse" aria-labelledby="heading-@classGroup.Key.ClassId" data-bs-parent="#issuesAccordion">
                <div class="accordion-body">
                    <ul class="list-unstyled">
                        @foreach (var issue in classGroup)
                        {
                            <li class="mb-3">
                                <strong>Title:</strong> @issue.IssueTitle<br />
                                <strong>Description:</strong> @issue.IssueDescription<br />
                                <strong>Status:</strong> @issue.IssueStatus<br />
                                (Student: @issue.Student.FirstName @issue.Student.LastName)
                            </li>
                            <hr />
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        $('.accordion-button').click(function () {
            // Toggle the expanded attribute
            var currentState = $(this).attr('aria-expanded') === 'true';
            $(this).attr('aria-expanded', !currentState);

            // Toggle the collapsed class
            $(this).toggleClass('collapsed');

            // Get the target collapse element
            var targetId = $(this).data('bs-target');
            $(targetId).toggleClass('show');
        });
    });
</script>

<style>
    .accordion-button:not(.collapsed) {
        color: #000;
        background-color: #f8f9fa;
    }

    .accordion-button:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(127, 61, 152, 0.25);
    }
</style>