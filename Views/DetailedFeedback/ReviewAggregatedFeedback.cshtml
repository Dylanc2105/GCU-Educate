            @Html.HiddenFor(m => m.AccommodatesStylesNotes)
            @Html.HiddenFor(m => m.LecturerResponsiveYesCount)
            @Html.HiddenFor(m => m.LecturerResponsiveNoCount)
            @Html.HiddenFor(m => m.LecturerResponsiveNotes)
            @Html.HiddenFor(m => m.LearningTeachingKeyIssues)
            @Html.HiddenFor(m => m.LearningTeachingStrengths)
            @Html.HiddenFor(m => m.LearningTeachingImprovements)
            @Html.HiddenFor(m => m.LearningTeachingComments)
            @Html.HiddenFor(m => m.LearningTeachingRating)

            <!-- Assessment Hidden Fields -->
            @Html.HiddenFor(m => m.AssessmentConfidenceYesCount)
