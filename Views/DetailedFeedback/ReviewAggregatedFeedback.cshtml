            @Html.HiddenFor(m => m.LearningExperienceStrengths)
            @Html.HiddenFor(m => m.LearningExperienceImprovements)
            @Html.HiddenFor(m => m.LearningExperienceComments)
            @Html.HiddenFor(m => m.LearningExperienceRating)

            <!-- Teaching & Learning Hidden Fields -->
            @Html.HiddenFor(m => m.ConceptsPresentedYesCount)
            @Html.HiddenFor(m => m.ConceptsPresentedNoCount)
            @Html.HiddenFor(m => m.ConceptsPresentedNotes)
            @Html.HiddenFor(m => m.MaterialsAvailableYesCount)
            @Html.HiddenFor(m => m.MaterialsAvailableNoCount)
            @Html.HiddenFor(m => m.MaterialsAvailableNotes)
