@model GuidanceTracker.Models.ClassRepFeedback
@{
    ViewBag.Title = "Review Aggregated Class Feedback";
}

<div class="main-card">
    <div class="card-header-main">
        <div class="header-content">
            <div class="title-section">
                <h2 class="card-title">Aggregated Class Feedback</h2>
                <p class="text-muted">@Model.Class - @Model.Course</p>
            </div>
            <div class="button-section">
                <a href="javascript:history.back()" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="alert alert-light border" style="background-color: #f8f9fa;">
            <i class="fas fa-info-circle mr-2" style="color: #7F3D98;"></i>
            <strong>Privacy Note:</strong> This shows aggregated results from all class members. Individual responses are not identifiable.
        </div>

        @using (Html.BeginForm("SubmitClassRepFeedback", "DetailedFeedback", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <!-- Hidden fields for all aggregated data -->
            @Html.HiddenFor(m => m.Course)
            @Html.HiddenFor(m => m.Class)
            @Html.HiddenFor(m => m.ClassId)
            @Html.HiddenFor(m => m.StudentId)
            @Html.HiddenFor(m => m.CreatorId)

            <!-- Learning Experience Hidden Fields -->
            @Html.HiddenFor(m => m.MeetsExpectationsYesCount)
            @Html.HiddenFor(m => m.MeetsExpectationsNoCount)
            @Html.HiddenFor(m => m.MeetsExpectationsNotes)
            @Html.HiddenFor(m => m.WouldRecommendYesCount)
