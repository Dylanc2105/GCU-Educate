                                            {
                                                <li>@line.Trim()</li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Aggregated Text Feedback -->
                            <div class="mb-4">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-dark">Key Issues:</h6>
                                        <div class="p-3 rounded feedback-content" style="background-color: white; min-height: 100px;">
                                            @if (!string.IsNullOrWhiteSpace(Model.LearningExperienceKeyIssues))
                                            {
                                                <ul class="text-muted" style="font-size: 0.875rem; margin-bottom: 0;">
                                                    @foreach (var line in Model.LearningExperienceKeyIssues.Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries))
                                                    {
                                                        <li>@line.Trim()</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-dark">Strengths:</h6>
                                        <div class="p-3 rounded feedback-content" style="background-color: white; min-height: 100px;">
                                            @if (!string.IsNullOrWhiteSpace(Model.LearningExperienceStrengths))
                                            {
                                                <ul class="text-muted" style="font-size: 0.875rem; margin-bottom: 0;">
                                                    @foreach (var line in Model.LearningExperienceStrengths.Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries))
                                                    {
                                                        <li>@line.Trim()</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-dark">Suggested Improvements:</h6>
                                        <div class="p-3 rounded feedback-content" style="background-color: white; min-height: 100px;">
                                            @if (!string.IsNullOrWhiteSpace(Model.LearningExperienceImprovements))
                                            {
                                                <ul class="text-muted" style="font-size: 0.875rem; margin-bottom: 0;">
                                                    @foreach (var line in Model.LearningExperienceImprovements.Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries))
                                                    {
                                                        <li>@line.Trim()</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-dark">Additional Comments:</h6>
                                        <div class="p-3 rounded feedback-content" style="background-color: white; min-height: 100px;">
                                            @if (!string.IsNullOrWhiteSpace(Model.LearningExperienceComments))
                                            {
                                                <ul class="text-muted" style="font-size: 0.875rem; margin-bottom: 0;">
                                                    @foreach (var line in Model.LearningExperienceComments.Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries))
                                                    {
                                                        <li>@line.Trim()</li>
                                                    }
                                                </ul>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Section Rating -->
                            <div class="mb-4">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h6 class="text-dark mb-0">Average Section Rating:</h6>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <span class="h4" style="color: #7F3D98;">@Model.LearningExperienceRating/10</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Class Discussion Notes -->
                            <div class="mb-3">
                                <h6 class="text-dark mb-2">Class Discussion Notes:</h6>
                                <textarea name="LearningExperienceClassDiscussion"
                                            class="form-control"
                                            rows="4"
                                            placeholder="Add notes from class discussion about the learning experience..."
                                            style="border: 1px solid #ced4da;">@Model.LearningExperienceClassDiscussion</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teaching & Learning Methods Section -->
