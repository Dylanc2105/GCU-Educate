@model IEnumerable<GuidanceTracker.Models.DetailedFeedback>
@{
    ViewBag.Title = "Your Detailed Feedback";
}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Your Detailed Feedback</h2>
            <p class="text-muted">View the detailed feedback you have submitted</p>
            <a href="javascript:history.back()" class="btn" style="background-color: #f2e9ff; color: #7F3D98; border-color: #7F3D98; ">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info" style="background-color: #e0c6ff; color: #4b0082; border-color: #7F3D98;">
            <i class="fas fa-info-circle"></i> You haven't submitted any detailed feedback yet.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header" style="background-color: #7F3D98; color: white;">
                <h4>Submitted Feedback</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead style="background-color: #f2e9ff;">
                            <tr>
                                <th>Course</th>
                                <th>Class</th>
                                <th>Requested By</th>
                                <th>Date Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(f => f.DateCreated))
                            {
                                <tr>
                                    <td>@item.Course</td>
                                    <td>@item.Class</td>
                                    <td>
                                        @ViewData[$"CreatorName_{item.FeedbackId}"]
                                        <div class="small text-muted">@ViewData[$"CreatorRole_{item.FeedbackId}"]</div>
                                    </td>
                                    <td>@item.DateCreated</td>
                                    <td>
                                        <a href="@Url.Action("ViewDetailedFeedbackDetails", "DetailedFeedback", new { id = item.FeedbackId })"
                                           class="btn btn-sm" style="background-color: #7F3D98; color: white;">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>